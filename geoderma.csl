<?xml version="1.0" encoding="utf-8"?>
<style xmlns="http://purl.org/net/xbiblio/csl" class="in-text" version="1.0" demote-non-dropping-particle="sort-only" default-locale="en-US">
  <info>
    <title>Geoderma</title>
    <id>http://www.zotero.org/styles/geoderma</id>
    <link href="http://www.zotero.org/styles/geoderma" rel="self"/>
    <link href="http://www.zotero.org/styles/asa-cssa-sssa" rel="template"/>
    <link href="http://www.elsevier.com/journals/geoderma/0016-7061/guide-for-authors#68000" rel="documentation"/>
    <author>
      <name>Ross Bricklemyer</name>
      <email>ross.bricklemyer@gmail.com</email>
    </author>
    <category citation-format="author-date"/>
    <category field="biology"/>
    <issn>0016-7061</issn>
    <eissn>1872-6259</eissn>
    <updated>2012-09-27T22:06:38+00:00</updated>
