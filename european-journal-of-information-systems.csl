<?xml version="1.0" encoding="utf-8"?>
<style xmlns="http://purl.org/net/xbiblio/csl" class="in-text" version="1.0" demote-non-dropping-particle="sort-only" default-locale="en-GB">
  <info>
    <title>European Journal of Information Systems</title>
    <title-short>EJIS</title-short>
    <id>http://www.zotero.org/styles/european-journal-of-information-systems</id>
    <link href="http://www.zotero.org/styles/european-journal-of-information-systems" rel="self"/>
    <link href="http://www.palgrave-journals.com/ejis/author_instructions.html#References" rel="documentation"/>
    <author>
      <name>Xunhua Guo</name>
      <email>xunhua.guo@gmail.com</email>
    </author>
    <contributor>
      <name>Krishna Sapkota</name>
      <uri>http://twitter.com/ks_21285</uri>
    </contributor>
    <category citation-format="author-date"/>
    <category field="science"/>
    <issn>0960-085X</issn>
    <eissn>1476-9344</eissn>
    <updated>2012-12-13T23:23:07+00:00</updated>
    <rights license="http://creativecommons.org/licenses/by-sa/3.0/">This work is licensed under a Creative Commons Attribution-ShareAlike 3.0 License</rights>
  </info>
  <!-- editors  -->
  <macro name="editor">
    <names variable="editor" delimiter=", ">
      <name and="symbol" initialize-with=". " delimiter=", "/>
      <label form="short" prefix=" "/>
    </names>
  </macro>
  <!-- unknown author -->
  <macro name="anon">
    <text term="anonymous" form="short" text-case="capitalize-first" strip-periods="true"/>
  </macro>
  <!-- author  in references -->
  <macro name="author">
    <names variable="author">
      <name name-as-sort-order="all" and="text" sort-separator=" " initialize-with="" delimiter-precedes-last="never" delimiter=", ">
        <name-part name="family" text-case="uppercase"/>
      </name>
      <label form="short" prefix=" "/>
      <substitute>
        <names variable="editor"/>
        <text macro="anon"/>
      </substitute>
    </names>
  </macro>
  <!-- author in citation -->
  <macro name="author-short">
    <names variable="author">
      <name form="short" and="symbol" delimiter=", " delimiter-precedes-last="never" initialize-with=". "/>
      <et-al font-style="italic"/>
      <substitute>
        <names variable="editor"/>
        <names variable="translator"/>
        <text macro="anon"/>
      </substitute>
    </names>
  </macro>
  <!-- Specifies the references for webpages -->
  <macro name="access">
    <choose>
      <if variable="URL">
        <text value="Available at: "/>
        <text variable="URL"/>
        <group prefix=" (" suffix=")">
          <text value="accessed "/>
          <date variable="accessed">
            <date-part name="day" form="numeric-leading-zeros" suffix="/"/>
            <date-part name="month" form="numeric-leading-zeros" suffix="/"/>
            <date-part name="year" form="short"/>
          </date>
        </group>
      </if>
    </choose>
  </macro>
  <!-- title  -->
  <macro name="title">
    <choose>
      <if type="bill book graphic legal_case motion_picture report song thesis webpage" match="any">
        <text variable="title" font-style="italic"/>
      </if>
      <else>
        <text variable="title"/>
      </else>
    </choose>
  </macro>
  <!-- publisher -->
  <macro name="publisher">
    <group delimiter=": ">
      <text variable="publisher-place"/>
      <text variable="publisher"/>
    </group>
  </macro>
  <!-- issue  -->
  <macro name="year-date">
    <choose>
      <if variable="issued">
        <date variable="issued">
          <date-part name="year"/>
        </date>
      </if>
      <else>
        <text term="no date" form="short"/>
      </else>
    </choose>
  </macro>
  <!-- edition -->
  <macro name="edition">
    <choose>
      <if is-numeric="edition">
        <group delimiter=" " prefix=" (" suffix=")">
          <number variable="edition" form="ordinal"/>
          <text term="edition" form="long"/>
        </group>
      </if>
      <else>
        <text variable="edition" suffix="."/>
      </else>
    </choose>
  </macro>
  <!-- pages -->
  <macro name="pages">
    <group prefix=" ">
      <text variable="page"/>
    </group>
  </macro>
  <!-- citationn -->
  <citation et-al-min="3" et-al-use-first="1" disambiguate-add-year-suffix="true" disambiguate-add-names="true" disambiguate-add-givenname="true">
    <layout prefix="(" suffix=")" delimiter="; ">
      <group delimiter=", ">
        <text macro="author-short"/>
        <text macro="year-date"/>
        <group>
          <label variable="locator" form="short"/>
          <text variable="locator"/>
        </group>
      </group>
    </layout>
  </citation>
  <!-- bibliography -->
  <bibliography hanging-indent="true">
    <sort>
      <key macro="author"/>
      <key variable="title"/>
    </sort>
    <layout>
      <text macro="author"/>
      <date variable="issued" prefix=" (" suffix=")">
        <date-part name="year"/>
      </date>
      <choose>
        <!-- book -->
        <if type="bill book graphic legal_case motion_picture report song" match="any">
          <group prefix=" " delimiter=". ">
            <group>
              <text macro="title"/>
              <text macro="edition"/>
            </group>
            <text macro="editor"/>
            <text macro="publisher"/>
          </group>
        </if>
        <!-- conference paper -->
        <else-if type="chapter paper-conference" match="any">
          <text macro="title" prefix=" " suffix="."/>
          <group prefix=" " delimiter=" ">
            <text term="in" text-case="capitalize-first" suffix=":"/>
            <text macro="editor"/>
            <text variable="container-title" font-style="italic" suffix="."/>
            <text variable="collection-title" suffix="."/>
            <group suffix="." delimiter=", ">
              <group>
                <label variable="page" form="short" suffix=" "/>
                <text macro="pages"/>
              </group>
              <text macro="publisher"/>
            </group>
          </group>
        </else-if>
        <!-- thesis -->
        <else-if type="thesis">
          <group prefix=" " delimiter=". " suffix=".">
            <text macro="title"/>
            <text macro="edition"/>
            <text variable="genre"/>
            <text macro="publisher"/>
          </group>
        </else-if>
        <!-- webpage -->
        <else-if type="webpage">
          <group prefix=" " delimiter=", " suffix=".">
            <text macro="title"/>
            <text macro="edition"/>
          </group>
          <text value=" [Online]"/>
        </else-if>
        <!-- for rest of the types -->
        <else>
          <group suffix=".">
            <text macro="title" prefix=" "/>
            <text macro="editor" prefix=" "/>
          </group>
          <group prefix=" " suffix=".">
            <text variable="container-title" font-style="italic"/>
            <group prefix=" ">
              <text variable="volume"/>
              <text variable="issue" prefix="(" suffix=")"/>
            </group>
            <group prefix=", ">
              <text macro="pages"/>
            </group>
          </group>
        </else>
      </choose>
      <text prefix=" " macro="access" suffix="."/>
    </layout>
  </bibliography>
</style>
