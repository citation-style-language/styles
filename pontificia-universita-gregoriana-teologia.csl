  <!-- Aquí es defineixen les questions concretes dels idiomes -->
  <locale>
    <style-options punctuation-in-quote="false"/>
    <terms>
      <term name="et-al"> &#8211; al.</term>
      <term name="open-quote">«</term>
      <term name="close-quote">»</term>
      <term name="ibid">ibid.</term>
      <term name="in">in</term>
      <term name="accessed">accesso</term>
      <term name="editor">ed.</term>
      <term name="editor" form="short">ed.</term>
      <term name="page-range-delimiter">-</term>
      <term name="from">orig.</term>
      <term name="translator">tr.</term>
      <term name="volume">vol.</term>
      <term name="review-of">Recensione di</term>
      <term name="audio-recording">audio</term>
      <term name="video">video</term>
      <term name="internet">URL</term>
    </terms>
  </locale>
  <locale xml:lang="fr">
    <terms>
      <term name="accessed">consulté</term>
      <term name="in">dans</term>
      <term name="editor">éd.</term>
      <term name="editor" form="short">éd.</term>
      <term name="from">orig.</term>
      <term name="translator">tr.</term>
      <term name="review-of">Examen de</term>
    </terms>
  </locale>
  <locale xml:lang="es">
    <terms>
      <term name="accessed">consulta</term>
      <term name="in">en</term>
      <term name="from">orig.</term>
      <term name="translator">tr.</term>
      <term name="review-of">Recensión de</term>
    </terms>
  </locale>
  <locale xml:lang="de">
    <terms>
      <term name="accessed">Zugriff</term>
      <term name="editor">Hg.</term>
      <term name="editor" form="short">Hg.</term>
      <term name="from">orig.</term>
      <term name="translator">tr.</term>
      <term name="review-of">Überprüfung von</term>
    </terms>
  </locale>
  <locale xml:lang="en">
    <terms>
      <term name="accessed">accessed</term>
      <term name="from">orig.</term>
      <term name="translator">tr.</term>
      <term name="review-of">Review of</term>
    </terms>
  </locale>
  <!-- Aquí se definen los formatos de cada tipo de citación: libro, artículo, diccionario...
	Se diferencian 'nota' y 'bibliografía', ya que pueden ser diferentes  -->
  <!-- Formato del nombre del autor: versalitas, en la cita solo el apellido -->
  <!-- Autor en nota -->
  <macro name="Autor_Nota">
    <names variable="author" font-variant="normal" font-weight="normal">
      <name font-variant="small-caps" font-weight="normal" form="short"/>
      <label form="short" prefix=", "/>
      <et-al font-variant="normal" font-style="italic"/>
      <substitute>
        <names variable="editor"/>
      </substitute>
    </names>
  </macro>
  <!-- Autor en bibliografía -->
  <macro name="Autor_Biblio">
    <names variable="author" font-variant="normal" font-weight="normal">
      <name font-variant="small-caps" font-weight="normal" form="long" initialize-with="." name-as-sort-order="all"/>
      <label form="long" prefix=", "/>
      <substitute>
        <names variable="editor"/>
      </substitute>
    </names>
  </macro>
  <!-- Título en nota -->
  <macro name="Titulo_Nota">
    <choose>
      <!-- libros, tesis y manuscritos en cursiva, forma corta -->
      <if type="book thesis manuscript" match="any">
        <text variable="title" form="short" font-style="italic"/>
      </if>
      <!-- Articulos de periodico, especialmente AAS/ASS. Redonda y entre comillas francesas, forma corta -->
      <else-if type="article-newspaper" match="any">
        <text variable="title" form="short" font-style="italic"/>
      </else-if>
      <!-- Gravaciones -->
      <else-if type="broadcast musical_score song motion_picture" match="any">
        <choose>
          <if match="any" variable="collection-title">
            <text variable="title" form="short" font-style="normal" quotes="true"/>
          </if>
          <else>
            <text variable="title" form="short" font-style="italic"/>
          </else>
        </choose>
      </else-if>
      <else>
        <text variable="title" form="short" quotes="true"/>
      </else>
    </choose>
  </macro>
  <!-- Título en bibliografía -->
  <macro name="Titulo_Biblio">
    <choose>
      <!-- libros, tesis y manuscritos en cursiva, forma larga -->
      <if type="book thesis manuscript" match="any">
        <text variable="title" font-style="italic"/>
        <choose>
          <if type="thesis" match="any">
            <text variable="genre" prefix=", "/>
          </if>
        </choose>
      </if>
      <!-- Articulos de periodico, especialmente AAS/ASS -->
      <else-if type="article-newspaper" match="any">
        <text variable="genre" suffix=" "/>
        <text variable="title" form="short" font-style="italic" suffix=" "/>
        <group prefix="(" suffix=")," delimiter=" ">
          <date form="text" variable="issued">
            <date-part name="day"/>
            <date-part name="month"/>
            <date-part name="year"/>
          </date>
        </group>
      </else-if>
      <!-- Gravaciones -->
      <else-if type="broadcast musical_score song motion_picture" match="any">
        <choose>
          <if match="any" variable="collection-title">
            <text variable="title" form="short" font-style="normal" quotes="true"/>
          </if>
          <else>
            <text variable="title" form="short" font-style="italic"/>
          </else>
        </choose>
      </else-if>
      <else>
        <text variable="title" quotes="true"/>
      </else>
    </choose>
  </macro>
  <!-- Volumen de la obra -->
  <!-- Volumen en nota, precedido por 'vol.' y siempre en caracteres arábigos -->
  <!-- Número de volumenes en bibliografía, seguido por 'vol.' y siempre en caracteres arábigos -->
  <macro name="Volumen_Nota">
    <choose>
      <if match="any" is-numeric="volume">
        <text term="volume" text-case="capitalize-first"/>
        <text variable="volume" text-case="uppercase"/>
      </if>
    </choose>
  </macro>
  <macro name="Volumen_Biblio">
    <choose>
      <if match="any" is-numeric="number-of-volumes">
        <number text-case="uppercase" variable="number-of-volumes" form="numeric"/>
        <text term="volume" prefix=" "/>
      </if>
      <else-if match="any" is-numeric="volume">
        <text term="volume" suffix=" " text-case="capitalize-first"/>
        <text variable="volume" text-case="uppercase"/>
      </else-if>
    </choose>
  </macro>
  <!-- Formato de la colección -->
  <macro name="Coleccion">
    <group delimiter=" ">
      <text variable="collection-title"/>
      <text variable="collection-number" suffix=", "/>
    </group>
  </macro>
  <!-- Datos editoriales monografía -->
  <macro name="Editorial">
    <!-- editorial -->
    <text variable="publisher" suffix=", "/>
    <!-- ciudad -->
    <text variable="publisher-place" suffix=" "/>
    <!-- año -->
    <date form="text" date-parts="year" variable="issued"/>
    <!-- edición -->
    <text variable="edition" vertical-align="sup"/>
  </macro>
  <!-- Cita en bibliografía de una monografía -->
  <macro name="Libro">
    <choose>
      <!-- Para una sección de un libro -->
      <if variable="container-title" match="any">
        <text macro="ObraGeneral" suffix=", "/>
      </if>
    </choose>
    <group>
      <choose>
        <if variable="volume-title" match="any">
          <text macro="Volumen_Biblio" text-case="capitalize-all"/>
          <text variable="volume-title" font-style="italic" prefix=": " suffix=", "/>
        </if>
        <else>
          <text macro="Volumen_Biblio" text-case="capitalize-all" suffix=", "/>
        </else>
      </choose>
      <text macro="Coleccion"/>
      <text macro="Editorial"/>
    </group>
  </macro>
  <!-- Datos revista -->
  <macro name="Revista">
    <group delimiter=" ">
      <text term="in"/>
      <!-- in -->
      <text variable="container-title" form="short" font-style="italic"/>
      <!-- título corto -->
      <text variable="volume"/>
      <!-- volumen -->
      <choose>
        <!-- año entre paréntesis -->
        <if type="article-journal" match="any">
          <date date-parts="year" form="text" variable="issued" prefix="(" suffix=")"/>
        </if>
        <else>
          <date form="numeric" variable="issued" prefix="(" suffix=")"/>
        </else>
      </choose>
    </group>
  </macro>
  <!-- Macros para referir las obras de las miscelanias y de los diccionarios y enciclopedias -->
  <macro name="AutorGeneral">
    <names variable="container-author">
      <name initialize-with=".">
        <name-part name="family" font-variant="small-caps"/>
      </name>
    </names>
  </macro>
  <macro name="EditorGeneral">
    <names variable="editor">
      <name initialize-with=".">
        <name-part name="family" font-variant="small-caps"/>
      </name>
      <label form="short" prefix=", "/>
    </names>
  </macro>
  <macro name="TituloGeneral">
    <text variable="container-title" font-style="italic"/>
  </macro>
  <macro name="ObraGeneral">
    <group delimiter=" ">
      <text term="in"/>
      <choose>
        <if match="any" variable="container-author">
          <text macro="AutorGeneral" suffix=", "/>
        </if>
        <else>
          <text macro="EditorGeneral" suffix=", "/>
        </else>
      </choose>
      <text macro="TituloGeneral"/>
    </group>
  </macro>
  <!-- Macro para las traducciones -->
  <macro name="VersionOriginal">
    <!-- titol original -->
    <text variable="original-title" font-style="italic" suffix=", "/>
    <!-- editorial original -->
    <text variable="original-publisher" suffix=", "/>
    <!-- ciutat original -->
    <text variable="original-publisher-place" suffix=" "/>
    <!-- año original -->
    <date form="text" date-parts="year" variable="original-date"/>
  </macro>
  <!-- Macro para las recensiones (introducir como un artículo académico)-->
  <macro name="Recension_Bibliografia">
    <group>
      <text term="open-quote"/>
      <!-- Autor de la monografía -->
      <text term="review-of" suffix=" "/>
      <names variable="editor" font-variant="normal" font-weight="normal">
        <name font-variant="small-caps" font-weight="normal" form="long" initialize-with="." name-as-sort-order="all"/>
      </names>
      <!-- Título de la monografía -->
      <text variable="original-title" font-style="italic" prefix=" " suffix=", "/>
      <!-- Editorial de la monografía -->
      <text variable="original-publisher" suffix=", "/>
      <!-- Ciudad de la monografía -->
      <text variable="original-publisher-place" suffix=" "/>
      <!-- Año de la monografía -->
      <date form="text" date-parts="year" variable="original-date"/>
      <text term="close-quote" suffix=" "/>
    </group>
  </macro>
  <macro name="Recension_Nota">
    <group>
      <text term="open-quote"/>
      <!-- Autor de la monografía -->
      <text term="review-of" suffix=" "/>
      <names variable="editor" font-variant="normal" font-weight="normal">
        <name font-variant="small-caps" font-weight="normal" form="short" initialize-with="." name-as-sort-order="all"/>
      </names>
      <!-- Título de la monografía -->
      <text variable="original-title" font-style="italic" prefix=", "/>
      <text term="close-quote"/>
    </group>
  </macro>
  <!-- Macro para las obras antiguas (patrología, obras medievales, autores griegos...) -->
  <macro name="ObraAntigua_Bibliografia">
    <!-- traductor -->
    <names variable="translator" font-variant="normal" font-weight="normal">
      <name font-variant="small-caps" font-weight="normal" form="long" initialize-with="." name-as-sort-order="all"/>
    </names>
    <!-- títulol de la obra traducida -->
    <text variable="original-title" font-style="italic" prefix=", " suffix=", "/>
    <!-- colección de la obra traducida -->
    <text variable="collection-title" suffix=" "/>
    <!-- número de la colección -->
    <text variable="collection-number" suffix=", "/>
    <!-- editorial -->
    <text variable="original-publisher" suffix=", "/>
    <!-- ciudad -->
    <text variable="original-publisher-place" suffix=" "/>
    <!-- año -->
    <date form="text" date-parts="year" variable="original-date"/>
  </macro>
  <macro name="ObraAntigua_Nota">
    <!-- traductor -->
    <text term="translator" prefix=", " suffix=" "/>
    <names variable="translator" font-variant="normal" font-weight="normal">
      <name font-variant="small-caps" font-weight="normal" form="short" initialize-with="." name-as-sort-order="all"/>
    </names>
    <!-- títulol de la obra traducida -->
    <text variable="original-title" font-style="italic" prefix=", "/>
  </macro>
  <!-- Macro para AAS/ASS -->
  <macro name="Newspaper_Bibliografia">
    <text term="in"/>
    <text variable="container-title" font-style="italic" prefix=" " suffix=" "/>
    <text variable="volume"/>
    <date form="text" date-parts="year" variable="issued" prefix=" (" suffix=")"/>
  </macro>
  <!-- Macro para Gravaciones -->
  <!-- Notas a pie -->
  <macro name="Ellectronic_Nota">
    <group prefix=" [" suffix="]">
      <choose>
        <if type="broadcast musical_score song" match="any">
          <!-- [audio] -->
          <text term="audio-recording"/>
        </if>
        <else-if type="motion_picture" match="any">
          <!-- [video] -->
          <text term="video"/>
        </else-if>
        <else-if type="webpage" match="any">
          <!-- [url] -->
          <text term="internet"/>
        </else-if>
      </choose>
    </group>
  </macro>
  <!-- Bibliografia -->
  <macro name="Ellectronic_Bibliografia">
    <choose>
      <if type="broadcast musical_score song motion_picture" match="any">
        <group prefix=" [" suffix="] ">
          <!-- direccion URL -->
          <text macro="Ellectronic_Nota"/>
          <choose>
            <if variable="URL" match="any">
              <text term="in" prefix=" " suffix=" "/>
              <text variable="URL" font-style="italic"/>
            </if>
          </choose>
        </group>
        <!-- serie -->
        <text term="in" suffix=" "/>
        <text variable="collection-title" font-style="italic"/>
        <!-- numero de la serie -->
        <text variable="volume"/>
        <!-- productora/canal -->
        <text variable="publisher" prefix=", " suffix=", "/>
        <!-- lugar de producción -->
        <text variable="publisher-place" suffix=" "/>
      </if>
      <else-if type="webpage" match="any">
        <!-- pagina web -->
        <text term="in" prefix=" " suffix=" "/>
        <text variable="container-title" suffix=" " font-style="italic"/>
        <!-- serie -->
      </else-if>
    </choose>
    <group prefix="(" suffix=")" delimiter=" ">
      <!-- fecha -->
      <date form="text" variable="issued">
        <date-part name="day"/>
        <date-part name="month"/>
        <date-part name="year"/>
      </date>
    </group>
  </macro>
  <!-- Página citada -->
  <macro name="Pagina">
    <text variable="locator"/>
  </macro>
  <!--<macro name="Parrafo"><number variable="locator"/></macro>-->
  <!-- Notas a pié de página -->
  <citation near-note-distance="0" disambiguate-add-names="true" disambiguate-add-givenname="true" disambiguate-add-year-suffix="false">
    <layout delimiter="; " suffix=".">
      <choose>
        <!-- caso ibid -->
        <if match="any" position="ibid">
          <group delimiter=", ">
            <text term="ibid" font-style="italic"/>
            <text macro="Pagina" suffix="."/>
          </group>
        </if>
        <!-- caso normal -->
        <else>
          <group>
            <text macro="Autor_Nota" suffix=", "/>
            <text macro="Titulo_Nota"/>
            <choose>
              <if type="book thesis" match="any">
                <choose>
                  <if variable="genre" match="any">
                    <group prefix=" [" suffix="]">
                      <text term="genre"/>
                    </group>
                  </if>
                </choose>
                <text macro="Volumen_Nota" prefix=", "/>
              </if>
              <else-if type="manuscript" match="any">
                <!--<text macro="Parrafo" prefix=", "/>-->
                <text macro="ObraAntigua_Nota" prefix=", "/>
              </else-if>
              <else-if type="article article-magazine article-journal article-newspaper" match="any">
                <text macro="Recension_Nota"/>
              </else-if>
              <else-if type="broadcast musical_score song motion_picture webpage" match="any">
                <text macro="Ellectronic_Nota"/>
              </else-if>
              <else-if type="thesis" match="any">
                <text macro="Thesis_Nota"/>
              </else-if>
            </choose>
            <text macro="Pagina" prefix=", "/>
          </group>
        </else>
      </choose>
    </layout>
  </citation>
  <!-- Bibliografía -->
  <bibliography et-al-min="19" et-al-use-first="18" subsequent-author-substitute="&#8211;&#8211;&#8211;&#8211;">
    <!-- ordenar las notas bibliográficas por Autor y Título -->
    <sort>
      <key macro="Autor_Biblio"/>
      <key variable="title"/>
    </sort>
    <layout suffix=".">
      <!--<group delimiter=", ">-->
      <group>
        <!-- Primer elemento: Apellios e Inicial del autor -->
        <text macro="Autor_Biblio" suffix=", "/>
        <!-- Segundo elemento: título de la obra o del artículo -->
        <choose>
          <if type="broadcast musical_score song motion_picture webpage" match="any">
            <text macro="Titulo_Biblio"/>
          </if>
          <else>
            <text macro="Titulo_Biblio" suffix=", "/>
          </else>
        </choose>
        <choose>
          <!-- Tercer elemento: datos editoriales. Cambian según el tipo de documento -->
          <!-- Articulos -->
          <if type="article article-magazine article-journal" match="any">
            <choose>
              <if variable="original-title original-publisher original-publisher-place" match="any">
                <text macro="Recension_Bibliografia"/>
              </if>
            </choose>
            <text macro="Revista"/>
          </if>
          <!-- Entradas de diccionario y miscelanias -->
          <else-if type="entry-dictionary entry-encyclopedia paper-conference" match="any">
            <text macro="ObraGeneral"/>
          </else-if>
          <!-- Libro -->
          <else-if type="book chapter thesis" match="any">
            <choose>
              <!-- Ebooks-->
              <if variable="reviewed-genre" match="any">
                <group prefix=" [" suffix="]">
                  <text variable="reviewed-genre"/>
                </group>
              </if>
            </choose>
            <text macro="Libro"/>
            <choose>
              <if variable="original-title original-publisher original-publisher-place" match="any">
                <group prefix=" (" suffix=")">
                  <text term="from" suffix=" "/>
                  <text macro="VersionOriginal"/>
                </group>
              </if>
            </choose>
          </else-if>
          <!-- Manuscritos / Obras antiguas con ediciones nuevas -->
          <else-if type="manuscript" match="any">
            <group>
              <text term="translator" suffix=" "/>
              <text macro="ObraAntigua_Bibliografia"/>
            </group>
          </else-if>
          <!-- AAS/ASS -->
          <else-if type="article-newspaper" match="any">
            <text macro="Newspaper_Bibliografia"/>
          </else-if>
          <!-- Gravaciones -->
          <else-if type="broadcast musical_score song motion_picture webpage" match="any">
            <text macro="Ellectronic_Bibliografia"/>
          </else-if>
        </choose>
      </group>
      <!-- Indicación de las páginas -->
      <choose>
        <if type="article article-magazine article-journal article-newspaper" match="any">
          <text variable="page" prefix=" "/>
        </if>
        <else>
          <text variable="page" prefix=", "/>
        </else>
      </choose>
    </layout>
  </bibliography>
</style>
