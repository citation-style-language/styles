<?xml version="1.0" encoding="utf-8"?>
<style xmlns="http://purl.org/net/xbiblio/csl" class="note" version="1.0" page-range-format="expanded" demote-non-dropping-particle="never" default-locale="de-CH">
  <!-- This style was edited with the Visual CSL Editor (http://editor.citationstyles.org/visualEditor/) -->
  <info>
    <title>Juristische Zitierweise Bern (de-CH)</title>
    <id>http://www.zotero.org/styles/juristische-zitierweise-bern</id>
    <link href="http://www.zotero.org/styles/juristische-zitierweise-bern" rel="self"/>
    <link href="http://www.zotero.org/styles/juristische-zitierweise-schweizer" rel="template"/>
    <link rel="documentation" href="http://csl.hundius.ch/"/>
    <author>
      <name>Benjamin Hundius</name>
      <email>csl@hundius.ch</email>
      <uri>http://hundius.ch</uri>
    </author>
    <category citation-format="note"/>
    <category field="law"/>
    <summary>This syle is based on the &quot;Juristische Zitierweise Schweizer (Ryser Büschi et al.) (German - Switzerland)&quot; style by Stephan Schlegel (http://www.zotero.org/styles/juristische-zitierweise-schweizer). The citation is adapted for the style of articles in Swiss law publications. It is similar to the style of the Faculty of Law of the University of Bern.</summary>
    <updated>2019-03-06T10:12:40+00:00</updated>
    <rights license="http://creativecommons.org/licenses/by-sa/3.0/">This work is licensed under a Creative Commons Attribution-ShareAlike 3.0 License</rights>
  </info>
  <locale xml:lang="de">
    <terms>
      <term name="accessed">zuletzt besucht am</term>
      <term name="editor" form="short">Hrsg.</term>
      <term name="et-al" form="short">et al.</term>
      <term name="note" form="short">N</term>
      <term name="column" form="short">Rz.</term>
      <term name="opus" form="short">Rn.</term>
      <term name="page-range-delimiter">-</term>
      <term name="volume" form="short">Bd.</term>
      <term name="edition" form="short">Aufl.</term>
    </terms>
  </locale>
  <macro name="author">
    <names variable="author">
      <name font-style="normal" font-variant="small-caps" delimiter=" / " name-as-sort-order="all"/>
      <label form="short" prefix=" (" suffix=")"/>
      <substitute>
        <names variable="editor"/>
      </substitute>
    </names>
  </macro>
  <macro name="editor-author">
    <names variable="editor">
      <name font-style="normal" font-variant="small-caps" delimiter=" / " name-as-sort-order="all"/>
      <label form="short" prefix=" (" suffix=")"/>
      <substitute>
        <names variable="author"/>
      </substitute>
    </names>
  </macro>
  <macro name="author-note">
    <names variable="author">
      <name form="short" font-style="normal" font-variant="small-caps" delimiter="/" et-al-min="4" et-al-use-first="1" name-as-sort-order="all" sort-separator=""/>
    </names>
  </macro>
  <macro name="autor-editor-note">
    <names variable="author">
      <name form="short" delimiter="/" et-al-min="4" et-al-use-first="1" sort-separator="" font-style="normal" font-variant="small-caps"/>
      <substitute>
        <names variable="editor"/>
      </substitute>
    </names>
  </macro>
  <macro name="issued-date">
    <date variable="issued" prefix="vom ">
      <date-part name="day" suffix=". "/>
      <date-part name="month" form="long" suffix=" "/>
      <date-part name="year"/>
    </date>
  </macro>
  <macro name="accessed-date">
    <date variable="accessed">
      <date-part name="day" suffix="."/>
      <date-part name="month" form="numeric" suffix="."/>
      <date-part name="year"/>
    </date>
  </macro>
  <macro name="locator-note">
    <choose>
      <if match="any" locator="note">
        <text term="note" form="short" suffix=" "/>
      </if>
      <else-if match="any" locator="column">
        <text term="column" form="short" suffix=" "/>
      </else-if>
      <else-if match="any" locator="opus">
        <text term="opus" form="short" suffix=" "/>
      </else-if>
      <else-if match="any" locator="section">
        <text variable="note" suffix=" "/>
      </else-if>
    </choose>
    <text variable="locator"/>
  </macro>
  <macro name="full_case-note">
    <group delimiter=", ">
      <group delimiter=" ">
        <text value="Urteil des"/>
        <text macro="author-note"/>
        <text macro="issued-date"/>
        <text variable="title-short"/>
        <text variable="title" font-style="italic"/>
      </group>
      <choose>
        <if match="all" variable="container-title">
          <text variable="container-title"/>
        </if>
      </choose>
      <text macro="locator-note"/>
    </group>
  </macro>
  <macro name="publisher-place-date">
    <text variable="publisher-place" suffix=" "/>
    <date variable="issued">
      <date-part name="year"/>
    </date>
  </macro>
  <macro name="title-short">
    <choose>
      <if match="any" variable="title-short">
        <text variable="title-short" prefix=" (zit. " suffix=")"/>
      </if>
    </choose>
  </macro>
  <macro name="accessed-website">
    <choose>
      <if match="all" variable="accessed URL">
        <group delimiter=" ">
          <text variable="URL" suffix=" "/>
          <group delimiter=" " prefix="(" suffix=")">
            <text term="accessed"/>
            <text macro="accessed-date"/>
          </group>
        </group>
      </if>
    </choose>
  </macro>
  <macro name="edition-auflage">
    <group delimiter=". ">
      <text variable="edition"/>
      <text term="edition" form="short"/>
    </group>
  </macro>
  <macro name="volume-band">
    <group delimiter=". ">
      <text term="volume" form="short"/>
      <text variable="volume"/>
    </group>
  </macro>
  <citation>
    <layout delimiter="; " suffix=".">
      <choose>
        <if type="article-journal">
          <group delimiter=", ">
            <text macro="author-note" text-case="capitalize-first"/>
            <choose>
              <if match="any" variable="title-short">
                <text variable="title-short"/>
              </if>
            </choose>
            <text macro="locator-note"/>
          </group>
        </if>
        <else-if type="book chapter report" match="any">
          <group delimiter=", ">
            <text macro="author-note" text-case="capitalize-first"/>
            <choose>
              <if match="any" variable="title-short">
                <text variable="title" form="short"/>
              </if>
            </choose>
            <text macro="locator-note"/>
          </group>
        </else-if>
        <else-if type="thesis">
          <group delimiter=", ">
            <text macro="autor-editor-note" text-case="capitalize-first"/>
            <choose>
              <if match="any" variable="title-short">
                <text variable="title" form="short"/>
              </if>
            </choose>
            <text macro="locator-note"/>
          </group>
        </else-if>
        <else-if type="entry-encyclopedia">
          <choose>
            <if match="any" variable="editor">
              <group>
                <text variable="title-short" suffix="/"/>
                <text macro="author-note" suffix=", "/>
                <text variable="title"/>
                <text macro="locator-note" prefix=" "/>
              </group>
            </if>
            <else>
              <group>
                <text macro="author-note" text-case="capitalize-first" suffix=", "/>
                <text variable="title"/>
                <text macro="locator-note" prefix=" "/>
              </group>
            </else>
          </choose>
        </else-if>
        <else-if type="legal_case" match="any">
          <choose>
            <if match="all" variable="author">
              <choose>
                <if match="any" variable="publisher-place references">
                  <choose>
                    <if match="any" variable="container-title">
                      <group delimiter=", ">
                        <text macro="author-note"/>
                        <group delimiter=" ">
                          <text variable="container-title"/>
                          <text variable="volume"/>
                        </group>
                        <text variable="page-first"/>
                      </group>
                      <choose>
                        <if match="any" locator="page">
                          <text variable="locator" prefix=" (" suffix=")"/>
                        </if>
                        <else>
                          <text macro="locator-note" prefix=", "/>
                        </else>
                      </choose>
                    </if>
                    <else>
                      <group delimiter=", ">
                        <text macro="full_case-note"/>
                      </group>
                    </else>
                  </choose>
                </if>
                <else>
                  <choose>
                    <if match="any" position="first">
                      <group delimiter=", ">
                        <text macro="full_case-note"/>
                      </group>
                    </if>
                    <else>
                      <group delimiter=", ">
                        <text macro="author-note"/>
                        <text variable="title-short"/>
                        <text macro="locator-note"/>
                      </group>
                      <text variable="title" prefix=" – "/>
                    </else>
                  </choose>
                </else>
              </choose>
            </if>
            <else>
              <text variable="title"/>
              <text macro="locator-note" prefix=" "/>
            </else>
          </choose>
        </else-if>
        <else-if type="article" match="any">
          <group delimiter=", ">
            <choose>
              <if match="any" variable="title-short">
                <text variable="title-short"/>
              </if>
              <else>
                <text variable="title"/>
              </else>
            </choose>
            <text macro="accessed-website"/>
            <text macro="locator-note"/>
          </group>
        </else-if>
        <else-if type="legislation" match="any">
          <choose>
            <if match="any" variable="number">
              <choose>
                <if match="any" position="first">
                  <text variable="locator" suffix=" "/>
                  <text variable="title"/>
                  <group delimiter="; " prefix=" (" suffix=")">
                    <group delimiter=", ">
                      <text variable="collection-title"/>
                      <text variable="title-short"/>
                    </group>
                    <text variable="number"/>
                  </group>
                </if>
                <else>
                  <text variable="locator" suffix=" "/>
                  <text variable="title-short"/>
                </else>
              </choose>
            </if>
            <else>
              <choose>
                <if match="any" position="first">
                  <text variable="locator" suffix=" "/>
                  <text variable="title"/>
                  <text variable="container-title" prefix=", "/>
                  <text variable="volume" prefix=" "/>
                  <text macro="issued-date" prefix=" "/>
                  <text variable="page-first" prefix=", S. " suffix=" ff."/>
                  <text variable="title-short" prefix=" (zit. " suffix=")"/>
                </if>
                <else>
                  <text variable="locator" suffix=" "/>
                  <text variable="title-short"/>
                </else>
              </choose>
            </else>
          </choose>
        </else-if>
        <else-if type="bill" match="any">
          <group delimiter=", ">
            <choose>
              <if match="any" variable="title-short">
                <text variable="title-short"/>
              </if>
              <else-if match="any" variable="container-title">
                <group delimiter=" ">
                  <text variable="container-title"/>
                  <date date-parts="year" form="numeric" variable="issued"/>
                  <choose>
                    <if match="any" variable="volume">
                      <text variable="volume"/>
                    </if>
                  </choose>
                </group>
              </else-if>
              <else>
                <text variable="title"/>
              </else>
            </choose>
            <text macro="locator-note"/>
          </group>
        </else-if>
        <else-if type="webpage" match="any">
          <text variable="URL" suffix=" "/>
          <group delimiter=" " prefix="(" suffix=")">
            <text term="accessed"/>
            <text macro="accessed-date"/>
          </group>
        </else-if>
        <else>
          <group delimiter=", ">
            <text macro="author-note" text-case="capitalize-first"/>
            <text variable="title-short"/>
            <text macro="locator-note"/>
          </group>
        </else>
      </choose>
    </layout>
  </citation>
  <bibliography subsequent-author-substitute="ders.," hanging-indent="true">
    <sort>
      <key macro="author"/>
      <key variable="issued"/>
      <key variable="author"/>
    </sort>
    <layout>
      <choose>
        <if type="article-journal">
          <text macro="author" text-case="capitalize-first" suffix=": "/>
          <group delimiter=", ">
            <text variable="title"/>
            <group delimiter=" ">
              <text variable="container-title" suffix=" "/>
              <choose>
                <if match="any" variable="issue">
                  <text variable="issue" prefix="vom "/>
                </if>
                <else>
                  <date date-parts="year" form="numeric" variable="issued"/>
                </else>
              </choose>
            </group>
          </group>
          <text variable="page" prefix=", S. "/>
          <text macro="title-short"/>
          <text macro="accessed-website" prefix=", "/>
        </if>
        <else-if type="book report" match="any">
          <text macro="author" text-case="capitalize-first" suffix=": "/>
          <group delimiter=", ">
            <text variable="title"/>
            <text macro="volume-band"/>
            <text macro="edition-auflage"/>
            <text macro="publisher-place-date"/>
          </group>
          <text macro="title-short"/>
          <text macro="accessed-website" prefix=", "/>
        </else-if>
        <else-if type="chapter">
          <text macro="author" text-case="capitalize-first" suffix=": "/>
          <text variable="title"/>
          <text term="in" prefix=", " suffix=": "/>
          <names variable="editor" suffix=": ">
            <name delimiter=" / " name-as-sort-order="all"/>
            <label form="short" prefix=" (" suffix=")"/>
          </names>
          <group delimiter=", ">
            <text variable="container-title"/>
            <text macro="edition-auflage"/>
            <text macro="publisher-place-date"/>
            <text variable="page" prefix="S. "/>
          </group>
          <text macro="title-short"/>
          <text macro="accessed-website" prefix=", "/>
        </else-if>
        <else-if type="thesis">
          <text macro="author" text-case="capitalize-first" suffix=": "/>
          <group delimiter=", ">
            <text variable="title"/>
            <group delimiter=" ">
              <text variable="genre"/>
              <choose>
                <if match="all" variable="publisher">
                  <text variable="publisher-place" suffix=", "/>
                  <text variable="publisher" suffix=" "/>
                  <date form="text" variable="issued">
                    <date-part name="year"/>
                  </date>
                </if>
                <else>
                  <text macro="publisher-place-date"/>
                </else>
              </choose>
              <text macro="title-short"/>
            </group>
          </group>
          <text macro="accessed-website" prefix=", "/>
        </else-if>
        <else-if type="entry-encyclopedia">
          <choose>
            <if match="any" variable="editor">
              <text macro="editor-author" text-case="capitalize-first" suffix=": "/>
              <group delimiter=", ">
                <text variable="container-title"/>
                <text macro="volume-band"/>
                <text macro="edition-auflage"/>
                <group delimiter="">
                  <text macro="publisher-place-date"/>
                  <group delimiter=" / " prefix=" (zit. " suffix=")">
                    <text variable="title-short"/>
                    <text value="Bearbeiter/in" font-variant="small-caps"/>
                  </group>
                </group>
              </group>
            </if>
            <else>
              <text macro="author" text-case="capitalize-first" suffix=": "/>
              <group delimiter=", ">
                <text variable="container-title"/>
                <text macro="volume-band"/>
                <text macro="edition-auflage"/>
                <text macro="publisher-place-date"/>
              </group>
            </else>
          </choose>
          <text macro="accessed-website" prefix=", "/>
        </else-if>
        <else-if type="bill" match="any">
          <text value="[Materialie] " strip-periods="false"/>
          <choose>
            <if match="any" variable="author">
              <names variable="author" suffix=": ">
                <name/>
              </names>
            </if>
          </choose>
          <group delimiter=" ">
            <text variable="title"/>
            <text macro="issued-date"/>
          </group>
          <choose>
            <if match="any" variable="container-title">
              <group delimiter=" " prefix=", ">
                <text variable="container-title"/>
                <date date-parts="year" form="numeric" variable="issued"/>
                <text variable="volume"/>
                <text variable="page-first" suffix=" ff."/>
              </group>
            </if>
          </choose>
          <text macro="title-short" prefix=" "/>
          <text macro="accessed-website" prefix=", "/>
        </else-if>
      </choose>
    </layout>
  </bibliography>
</style>
