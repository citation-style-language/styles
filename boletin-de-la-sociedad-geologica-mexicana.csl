<?xml version="1.0" encoding="utf-8"?>
<style class="in-text" version="1.0" and="text" delimiter-precedes-et-al="always" delimiter-precedes-last="always" name-as-sort-order="all" demote-non-dropping-particle="never" default-locale="en-GB" xmlns="http://purl.org/net/xbiblio/csl">
  <info>
    <title>Boletín de la Sociedad Geológica Mexicana</title>
    <id>http://www.zotero.org/styles/boletin-de-la-sociedad-geologica-mexicana</id>
    <link href="http://www.zotero.org/styles/boletin-de-la-sociedad-geologica-mexicana" rel="self"/>
    <link href="http://www.zotero.org/styles/ecology-letters" rel="template"/>
    <link href="https://urbaniizziv.uirs.si/Instructions-for-authors" rel="documentation"/>
    <author>
      <name>Mario Schädel</name>
      <email>mario.schaedel@gmail.com</email>
    </author>
    <category citation-format="author-date"/>
    <category field="biology"/>
    <category field="geology"/>
    <updated>2021-12-06T21:46:43+00:00</updated>
    <rights license="http://creativecommons.org/licenses/by-sa/3.0/">This work is licensed under a Creative Commons Attribution-ShareAlike 3.0 License</rights>
  </info>
  <locale xml:lang="en">
    <terms>
      <term name="editortranslator" form="short">
        <single>ed. &amp; trans.</single>
        <multiple>eds. &amp; trans.</multiple>
      </term>
      <term name="interviewer" form="short">interv.</term>
      <term name="circa" form="short">ca.</term>
      <term name="collection-editor" form="short">ed.</term>
      <term name="edition" form="long">edition</term>
      <term name="page" form="short">
        <single>p.</single>
        <multiple>pp.</multiple>
      </term>
    </terms>
  </locale>
  <macro name="container">
    <choose>
      <if type="chapter paper-conference entry-encyclopedia" match="any">
        <text term="in" text-case="lowercase" prefix=", " suffix=": "/>
        <names variable="editor translator" delimiter=", " suffix=" ">
          <name and="symbol" delimiter-precedes-last="always" initialize-with="." name-as-sort-order="all"/>
          <label form="short" text-case="lowercase" prefix=" (" suffix=")"/>
        </names>
        <group>
          <text variable="container-title" text-case="title" font-style="normal" suffix=": "/>
          <text variable="collection-title" text-case="title" suffix=", "/>
          <text variable="volume" suffix=", "/>
        </group>
      </if>
      <else-if type="bill book graphic legal_case legislation motion_picture report song" match="any">
        <group prefix=", " delimiter=", ">
          <text variable="container-title"/>
          <text variable="collection-title"/>
        </group>
      </else-if>
      <else-if type="webpage" match="any">
        <group delimiter=", ">
          <text variable="container-title"/>
          <text variable="collection-title"/>
        </group>
      </else-if>
      <else-if type="article-magazine" match="any"/>
      <else-if type="article" match="any">
        <choose>
          <if match="none" variable="author">
            <group>
              <text variable="title"/>
              <text variable="publisher-place" prefix=". "/>
            </group>
          </if>
        </choose>
      </else-if>
      <else-if type="dataset" match="any">
        <text variable="title" font-style="italic"/>
      </else-if>
      <else>
        <group delimiter=", " prefix=": ">
          <text variable="container-title" font-style="normal" suffix=","/>
          <text variable="collection-title"/>
        </group>
      </else>
    </choose>
    <text macro="locators"/>
  </macro>
  <macro name="author">
    <names variable="author" suffix=",">
      <name and="symbol" delimiter-precedes-last="always" et-al-min="7" initialize-with="." name-as-sort-order="all"/>
      <label form="short" text-case="lowercase" prefix=" (" suffix=")"/>
      <substitute>
        <names variable="editor"/>
        <names variable="translator"/>
        <text macro="title"/>
      </substitute>
    </names>
  </macro>
  <macro name="author-short">
    <names variable="author" font-style="normal">
      <name form="short" font-style="normal" and="text" initialize-with=". "/>
      <et-al font-style="italic"/>
      <substitute>
        <names variable="editor"/>
        <names variable="translator"/>
        <choose>
          <if type="bill book graphic legal_case legislation motion_picture report song" match="any">
            <text variable="title" form="short" font-style="italic"/>
          </if>
          <else-if type="webpage" match="any">
            <text variable="container-title"/>
          </else-if>
          <else-if type="dataset" match="any">
            <text variable="publisher"/>
          </else-if>
          <else>
            <text variable="original-publisher" form="short" quotes="false"/>
          </else>
        </choose>
      </substitute>
    </names>
  </macro>
  <macro name="author-count">
    <names variable="author">
      <name form="count"/>
      <substitute>
        <names variable="editor"/>
      </substitute>
    </names>
  </macro>
  <macro name="access">
    <choose>
      <if variable="DOI">
        <text variable="DOI" prefix="https://doi.org/"/>
      </if>
      <else-if type="webpage post-weblog" match="any">
        <group delimiter=" ">
          <text value="Available at:"/>
          <text variable="URL"/>
          <group prefix="(" suffix=").">
            <text value="accessed" suffix=" "/>
            <date variable="accessed">
              <date-part name="day" suffix=". "/>
              <date-part name="month" form="short" suffix=". "/>
              <date-part name="year"/>
            </date>
          </group>
        </group>
      </else-if>
    </choose>
  </macro>
  <macro name="title">
    <choose>
      <if type="report" match="any">
        <text variable="title" font-style="normal"/>
        <group delimiter=" " prefix=": ">
          <text variable="number" prefix="No. "/>
        </group>
      </if>
      <else-if type="bill book graphic legal_case motion_picture report song speech" match="any">
        <text variable="title" font-style="normal"/>
        <text macro="edition" prefix=", "/>
      </else-if>
      <else-if type="webpage">
        <text variable="container-title"/>
      </else-if>
      <else-if type="legislation" match="any">
        <text variable="title"/>
      </else-if>
      <else-if type="article" match="any">
        <text variable="publisher"/>
      </else-if>
      <else-if type="dataset" match="any">
        <text variable="publisher"/>
      </else-if>
      <else>
        <text variable="title"/>
      </else>
    </choose>
  </macro>
  <macro name="publisher">
    <group delimiter=", ">
      <text variable="publisher-place"/>
      <text variable="publisher"/>
      <text variable="genre"/>
    </group>
  </macro>
  <macro name="event">
    <choose>
      <if variable="event">
        <text term="presented at" text-case="capitalize-first" suffix=" "/>
        <text variable="event"/>
      </if>
    </choose>
  </macro>
  <macro name="issued">
    <choose>
      <if variable="issued">
        <date variable="issued" prefix=" ">
          <date-part name="year"/>
        </date>
      </if>
      <else>
        <text term="no date" form="short"/>
      </else>
    </choose>
  </macro>
  <macro name="edition">
    <group delimiter=" ">
      <choose>
        <if is-numeric="edition">
          <number variable="edition" form="ordinal"/>
        </if>
        <else>
          <text variable="edition" suffix="."/>
        </else>
      </choose>
      <text term="edition"/>
    </group>
  </macro>
  <macro name="locators">
    <choose>
      <if type="article-journal article-magazine article-newspaper" match="any">
        <group delimiter=", " prefix=" ">
          <group>
            <text variable="volume"/>
            <text variable="issue" prefix="(" suffix=")"/>
          </group>
          <group>
            <text variable="page" form="short"/>
          </group>
        </group>
      </if>
      <else-if type="book thesis" match="any">
        <group delimiter=", " prefix=": ">
          <text macro="event"/>
          <text macro="publisher"/>
        </group>
      </else-if>
      <else-if type="chapter paper-conference entry-encyclopedia" match="any">
        <group delimiter=", ">
          <text macro="event"/>
          <text macro="publisher"/>
          <group>
            <text variable="page"/>
          </group>
        </group>
      </else-if>
      <else-if type="patent">
        <text variable="number" prefix=". "/>
      </else-if>
      <else-if type="dataset" match="any">
        <group prefix=", ">
          <text macro="publisher"/>
        </group>
      </else-if>
    </choose>
    <choose>
      <if type="book" match="any">
        <text term="page" form="short" prefix=", " suffix=" "/>
        <text variable="number-of-pages"/>
      </if>
    </choose>
  </macro>
  <citation delimiter-precedes-et-al="never" delimiter-precedes-last="never" et-al-min="3" et-al-use-first="1" disambiguate-add-givenname="true" disambiguate-add-year-suffix="true" collapse="year">
    <sort>
      <key macro="issued"/>
      <key macro="author"/>
    </sort>
    <layout delimiter="; " prefix="(" suffix=")">
      <group delimiter=", ">
        <text macro="author-short"/>
        <text macro="issued"/>
        <group delimiter=" ">
          <label variable="locator" form="short"/>
          <text variable="locator"/>
        </group>
      </group>
    </layout>
  </citation>
  <bibliography and="symbol" entry-spacing="1" hanging-indent="true">
    <sort>
      <key variable="author"/>
      <key macro="author-count"/>
      <key variable="author"/>
      <key macro="issued" sort="descending"/>
    </sort>
    <layout>
      <group suffix=".">
        <text macro="author"/>
        <group>
          <choose>
            <if type="legislation" match="none">
              <group prefix=" ">
                <text macro="issued"/>
              </group>
            </if>
            <else>
              <text variable="container-title" prefix=". "/>
              <text variable="publisher-place"/>
            </else>
          </choose>
        </group>
        <group prefix=", ">
          <choose>
            <if type="legislation" match="none">
              <text macro="title"/>
              <text macro="container"/>
            </if>
          </choose>
        </group>
      </group>
      <text macro="access" prefix=". "/>
    </layout>
  </bibliography>
</style>
