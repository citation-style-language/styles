<?xml version="1.0" encoding="utf-8"?>
<style xmlns="http://purl.org/net/xbiblio/csl" class="note" version="1.0" name-delimiter=" / " et-al-min="4" et-al-use-first="1" et-al-subsequent-min="4" et-al-subsequent-use-first="1" initialize-with="." name-as-sort-order="all" sort-separator=", " demote-non-dropping-particle="never" default-locale="de-DE">
  <info>
    <title>Georg-August-Universität Göttingen - Seminar für Altorientalistik/Mythosforschung (Deutsch)</title>
    <id>http://www.zotero.org/styles/georg-august-universitat-gottingen-seminar-fur-altorientalistik-mythosforschung</id>
    <link href="http://www.zotero.org/styles/georg-august-universitat-gottingen-seminar-fur-altorientalistik-mythosforschung" rel="self"/>
    <link href="https://uni-goettingen.de/de/683850.html" rel="documentation"/>
    <author>
      <name>Denise Pätzold</name>
    </author>
    <author>
      <name>Mathis Kreitzscheck</name>
    </author>
    <contributor>
      <name>Brit Kärger</name>
    </contributor>
    <category citation-format="note"/>
    <updated>2025-08-01T15:42:56+00:00</updated>
    <rights license="http://creativecommons.org/licenses/by-sa/3.0/">This work is licensed under a Creative Commons Attribution-ShareAlike 3.0 License</rights>
  </info>
  <locale xml:lang="de">
    <terms>
      <term name="et-al">et al.</term>
      <term name="editor" form="short">Hg.</term>
    </terms>
  </locale>
  <macro name="author">
    <names variable="author" font-style="normal" font-variant="normal" delimiter="/" suffix="">
      <name font-style="normal" font-variant="normal" vertical-align="baseline" delimiter=" / " et-al-min="5" initialize-with="." name-as-sort-order="all" sort-separator=",  "/>
    </names>
  </macro>
  <macro name="note">
    <names variable="author" vertical-align="baseline" suffix=" ">
      <name form="short"/>
      <substitute>
        <choose>
          <if match="any" variable="editor">
            <names variable="editor"/>
          </if>
        </choose>
      </substitute>
    </names>
    <date date-parts="year" form="numeric" variable="issued"/>
    <text variable="locator" prefix=", "/>
  </macro>
  <macro name="contributors">
    <names variable="author">
      <name and="text" name-as-sort-order="first" sort-separator=", " delimiter=", " delimiter-precedes-last="always" initialize-with="."/>
      <label form="verb-short" prefix=", "/>
      <substitute>
        <names variable="editor"/>
        <text variable="title"/>
      </substitute>
    </names>
  </macro>
  <macro name="AufsatzZeitschrift">
    <text variable="container-title" prefix=" "/>
    <text variable="volume" prefix=" "/>
    <text variable="issue" prefix="/"/>
    <text variable="page" prefix=", "/>
    <text variable="URL" prefix=", "/>
  </macro>
  <macro name="Monographie">
    <text variable="title" prefix=" "/>
    <text variable="collection-title" prefix=", " suffix=" "/>
    <text variable="collection-number"/>
    <text variable="publisher-place" form="short" prefix=", "/>
  </macro>
  <macro name="SammelbandBeitrag">
    <text term="in" suffix=": "/>
    <names variable="editor" font-variant="normal" suffix=", ">
      <name initialize-with="." delimiter=" / " delimiter-precedes-last="always" et-al-min="5"/>
      <label form="short" plural="never" strip-periods="false" font-variant="normal" prefix=" (" suffix=")"/>
    </names>
    <text variable="container-title" suffix=", "/>
    <text variable="collection-title" suffix=" "/>
    <text variable="collection-number" suffix=", "/>
    <text variable="publisher-place" suffix=", "/>
    <text variable="page"/>
  </macro>
  <macro name="Lexika">
    <text variable="container-title"/>
    <text variable="volume" prefix=" "/>
    <text variable="page" prefix=", " suffix="."/>
  </macro>
  <macro name="year-date">
    <text variable="edition" form="short" vertical-align="sup" prefix=" "/>
    <date date-parts="year" form="text" variable="issued"/>
  </macro>
  <citation disambiguate-add-year-suffix="true" disambiguate-add-names="true" disambiguate-add-givenname="true" collapse="year" givenname-disambiguation-rule="all-names-with-initials">
    <layout delimiter="; " prefix="" suffix="">
      <text macro="note" font-variant="normal"/>
    </layout>
  </citation>
  <bibliography hanging-indent="true" et-al-min="6" et-al-use-first="4" entry-spacing="0" name-as-sort-order="all">
    <sort>
      <key macro="contributors"/>
      <key variable="issued"/>
      <key variable="title"/>
    </sort>
    <layout suffix=".">
      <group delimiter=". ">
        <text macro="author"/>
        <group delimiter=", ">
          <text macro="year-date"/>
          <text variable="title" prefix=" " suffix=","/>
          <choose>
            <if type="article-journal" match="any">
              <text macro="AufsatzZeitschrift"/>
            </if>
            <else-if type="chapter" match="any">
              <text macro="SammelbandBeitrag"/>
            </else-if>
            <else-if type="entry-encyclopedia entry-dictionary" match="any">
              <text macro="Lexika"/>
            </else-if>
            <else>
              <text macro="Monographie"/>
            </else>
          </choose>
        </group>
      </group>
    </layout>
  </bibliography>
</style>
