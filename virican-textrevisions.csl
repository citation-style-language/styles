<?xml version="1.0" encoding="utf-8"?>
<style xmlns="http://purl.org/net/xbiblio/csl" class="in-text" version="1.0" et-al-min="3" et-al-use-first="3" page-range-format="minimal" demote-non-dropping-particle="sort-only" default-locale="en-US">
  <!-- This style was edited with the Visual CSL Editor (http://editor.citationstyles.org/visualEditor/) -->
  <info>
    <title>ViriCan style for text revisions (based on Vancouver Author-date) v1.0</title>
    <title-short>ViriCan for text revisions </title-short>
    <id>http://www.zotero.org/styles/virican-textrevisions</id>
    <link href="http://www.zotero.org/styles/virican-textrevisions" rel="self"/>
	<link href="http://virican.net/index.php?id=zotero" rel="documentation"/>    
	<author>
      <name>Deilson Elgui de Oliveira</name>
      <email>elgui@virican.net</email>      
    </author>
    <category citation-format="numeric"/>
    <category field="generic-base"/>
    <category field="science"/>
    <summary>Not intended for final documents! This is a Vancouver Author-date style with new features to facilitate checking references during text revisions. Made by DEO at ViriCan (http://virican.net). Backbone code based on &quot;Elsevier - Vancouver&quot; by Richard Kanersky</summary>
    <updated>2019-07-14T00:00:00-00:00</updated>
    <rights license="http://creativecommons.org/licenses/by-sa/3.0/">This work is licensed under a Creative Commons Attribution-ShareAlike 3.0 License</rights>
  </info>
  
  <!-- *** MACROS - BETTER NOT TO CHANGE! *** -->
  <macro name="author-short">
    <names variable="author">
      <name form="short" and="text" delimiter=", " initialize-with=". "/>
      <substitute>
        <names variable="editor"/>
        <names variable="translator"/>
        <text variable="title" form="short"/>
      </substitute>
    </names>
  </macro>
  <macro name="year-date">
    <choose>
      <if variable="issued">
        <date variable="issued">
          <date-part name="year"/>
        </date>
      </if>
      <else>
        <text term="no date" form="short"/>
      </else>
    </choose>
  </macro>
  <macro name="author">
    <names variable="author">
      <name initialize-with="" delimiter=", " delimiter-precedes-last="always" name-as-sort-order="all" sort-separator=" "/>
      <label form="long" prefix=", "/>
      <substitute>
        <names variable="editor"/>
        <names variable="translator"/>
      </substitute>
    </names>
  </macro>
  <macro name="editor">
    <names variable="editor">
      <name initialize-with="" delimiter=", " delimiter-precedes-last="always" name-as-sort-order="all" sort-separator=" "/>
      <label form="long" prefix=", " suffix="."/>
    </names>
  </macro>
  <macro name="publisher">
    <text variable="publisher-place" suffix=": " text-case="title"/>
    <text variable="publisher"/>
  </macro>
  <macro name="edition">
    <choose>
      <if is-numeric="edition">
        <group delimiter=" ">
          <number variable="edition" form="ordinal"/>
          <text term="edition" form="short"/>
        </group>
      </if>
      <else>
        <text variable="edition"/>
      </else>
    </choose>
  </macro>
  <macro name="access">
    <choose>
      <if variable="URL">
        <group delimiter=": ">
          <text term="available at" text-case="capitalize-first"/>
          <text variable="URL"/>
        </group>
      </if>
    </choose>
  </macro>
    
  
  <!-- *** CITATION SECTION *** -->  
  <citation et-al-min="3" et-al-use-first="1" disambiguate-add-givenname="true" disambiguate-add-year-suffix="true" collapse="year" cite-group-delimiter=", ">
    <sort>
      <key macro="author"/>
      <key macro="year-date" sort="descending"/>
    </sort>
    <layout vertical-align="sup" delimiter=" | " prefix="[" suffix="]" font-weight="bold">
      <group delimiter=" ">
      <text variable="citation-number" prefix="#" suffix=" -"/>        
      <text macro="author-short" suffix=","/>
        <text macro="year-date"/>
        <group delimiter=" ">
          <label variable="locator" form="short"/>
          <text variable="locator"/>
        </group>
      </group>
    </layout>	
  </citation>

<!-- *** BIBLIOGRAPHY SECTION *** -->	
	<bibliography entry-spacing="0" second-field-align="flush" et-al-min="7" et-al-use-first="6">
    <layout>
      <text variable="citation-number" prefix="[" suffix="]"/>
      <text macro="author" suffix=". "/>
      <choose>
        <if type="bill book graphic legal_case legislation motion_picture report song" match="any">
          <group delimiter=". ">
            <text variable="title"/>
            <text variable="volume" prefix="vol. "/>
            <text macro="edition"/>
            <text macro="publisher"/>
          </group>
        </if>
        <else-if type="chapter paper-conference" match="any">
          <group delimiter=", ">
            <group delimiter=". ">
              <text variable="title" font-weight="bold"/>
              <group>
                <text term="in" text-case="sentence" suffix=": "/>
                <text macro="editor"/>
              </group>
              <group delimiter=", ">
                <text variable="container-title" form="short"/>
                <text variable="volume" prefix="vol. "/>
              </group>
              <text macro="edition"/>
            </group>
            <text macro="publisher"/>
            <group delimiter=" ">
              <label variable="page" form="short" plural="never"/>
              <text variable="page"/>
            </group>
          </group>
        </else-if>
        <else-if type="patent">
          <group delimiter=", ">
            <group delimiter=". ">
              <text variable="title" font-weight="bold"/>
              <text variable="number"/>
            </group>
          </group>
        </else-if>
        <else-if type="thesis">
          <group delimiter=". ">
            <text variable="title" font-weight="bold"/>
            <text variable="genre"/>
            <group delimiter=", ">
              <text variable="publisher"/>
            </group>
          </group>
        </else-if>
        <else>
          <group delimiter=":">
            <group delimiter=" ">
              <group delimiter=". ">
                <text variable="title" font-weight="bold"/>
                <text variable="container-title" form="short" text-case="title" strip-periods="true" font-style="italic"/>
              </group>
              <group delimiter=";">
                <text variable="volume" prefix=" "/>
              </group>
            </group>
            <text variable="page" form="short"/>
          </group>
        </else>
      </choose>
      <date variable="issued" suffix=".">
        <date-part name="year" prefix=", "/>
      </date>      
      <text macro="access" prefix=". "/>
       <!-- DEO: Used to present DOI as link, if available-->
	  <choose>
        <if variable="DOI">
          <text variable="DOI" prefix=" DOI: &lt;http://doi.org/" suffix="&gt;"/>
        </if>
		<!-- DEO: For webpages -->
        <else-if type="webpage post-weblog" match="any">
          <choose>
            <if variable="URL">
              <text variable="URL" prefix=" "/>
              <group prefix=" (" suffix=")" delimiter=" ">
                <text term="accessed" text-case="capitalize-first" suffix=":"/>
                <date variable="accessed">
                  <date-part name="day" suffix="/"/>
                  <date-part name="month" form="short" range-delimiter="" strip-periods="true" suffix="/"/>
                  <date-part name="year" range-delimiter=""/>
                </date>
              </group>
            </if>
          </choose>
        </else-if>
      </choose>
	    
	  <!-- DEO: Used to present PMID and PMCID, if available. PMID presented as link to PubMed entry, useful to check papers during revisions-->
	  <choose>
        <if match="any" variable="PMID PMCID">
          <group delimiter=";" prefix=" |" suffix=".">
            <choose>
              <if variable="PMID">
                <text variable="PMID" font-weight="normal" prefix=" PubMed: &lt;http://pmid.virican.net/" suffix="&gt;"/>
              </if>
            </choose>
            <choose>
              <if match="any" variable="PMCID">
                <text variable="PMCID" font-weight="normal" prefix=" PMCentral: &lt;http://pmcid.virican.net/" suffix="&gt;"/>
              </if>
            </choose>
          </group>
        </if>
      </choose>
    </layout>
  </bibliography>
</style>
