  <locale xml:lang="de">
    <terms>
      <term name="editor" form="verb">Hg.</term>
      <term name="editor" form="short">
        <single>Hg.</single>
        <multiple>Hg.</multiple>
      </term>
      <term name="editor" form="verb-short">hg. von</term>
      <term name="translator" form="verb-short">Übers. v.</term>
      <term name="editortranslator" form="verb">Hg./Übers.</term>
      <term name="editortranslator" form="verb-short">Hg. &amp; übers. von</term>
      <term name="number-of-volumes" form="short">Bde.</term>
      <term name="accessed" form="long">Datum des letzten Zugriffs</term>
      <term name="issue" form="short">H.</term>
    </terms>
  </locale>
  <macro name="contributor-long">
    <names variable="author">
      <name delimiter="/" prefix=" " delimiter-precedes-et-al="never" et-al-min="3" et-al-use-first="1" name-as-sort-order="all"/>
      <label form="short" prefix=" (" suffix=")"/>
      <et-al/>
      <substitute>
        <names variable="composer editor translator"/>
      </substitute>
    </names>
  </macro>
  <macro name="contributor-short">
    <choose>
      <if variable="author">
        <names variable="author">
          <name form="short" delimiter="/" delimiter-precedes-et-al="never" et-al-min="3" et-al-use-first="1"/>
        </names>
      </if>
      <else>
        <choose>
          <if type="bill book graphic legal_case motion_picture report song" match="any">
            <names variable="editor">
              <name form="short" delimiter="/" delimiter-precedes-last="never" name-as-sort-order="all">
                <name-part name="family"/>
              </name>
              <et-al term="et-al"/>
              <label form="short" prefix=" (" suffix=")"/>
            </names>
          </if>
        </choose>
      </else>
    </choose>
  </macro>
  <macro name="title-short">
    <text variable="title" form="short"/>
  </macro>
  <macro name="container-title">
    <group delimiter=": ">
      <text term="in" prefix=", "/>
      <text variable="container-title"/>
    </group>
  </macro>
  <macro name="editor">
    <names variable="editor" prefix=", ">
      <name delimiter="/ " prefix=" " and="text" et-al-min="3" et-al-use-first="1" initialize-with=". "/>
      <et-al/>
      <label form="short" plural="never" prefix=" (" suffix=")"/>
    </names>
  </macro>
  <macro name="volume-for-books">
    <choose>
      <if variable="collection-title">
        <group prefix=" (" suffix=")">
          <text variable="collection-title"/>
          <number prefix=" " variable="volume"/>
        </group>
      </if>
      <else-if match="all" variable="volume">
        <group delimiter=" ">
          <label prefix=", " variable="volume"/>
          <number text-case="capitalize-first" prefix=" " variable="volume"/>
        </group>
      </else-if>
      <else-if match="all" variable="number-of-volumes">
        <group delimiter=" ">
          <number variable="number-of-volumes"/>
          <label variable="number-of-volumes" form="short"/>
        </group>
      </else-if>
    </choose>
  </macro>
  <macro name="point-locators-subsequent">
    <group delimiter=" ">
      <label variable="locator" form="short"/>
      <text variable="locator"/>
    </group>
  </macro>
  <macro name="point-locators">
    <choose>
      <if variable="page">
        <label variable="locator" form="short" prefix=", hier: "/>
        <text variable="locator" prefix=" "/>
      </if>
      <else>
        <label prefix=", " variable="locator" form="short"/>
        <text variable="locator" prefix=" "/>
      </else>
    </choose>
  </macro>
  <macro name="pages">
    <label text-case="capitalize-first" prefix=", " variable="page" form="short"/>
    <text variable="page" prefix=" "/>
  </macro>
  <macro name="edition">
    <choose>
      <if match="all" is-numeric="edition">
        <group delimiter=". ">
          <number prefix=", " variable="edition"/>
          <label variable="edition" form="short"/>
        </group>
      </if>
      <else>
        <text variable="edition" form="short"/>
      </else>
    </choose>
  </macro>
  <macro name="serie-with-number">
    <group delimiter=", ">
      <text variable="collection-title"/>
      <text variable="collection-number" prefix=" "/>
    </group>
  </macro>
  <macro name="url-with-date">
    <group>
      <text variable="URL" prefix=", URL: "/>
      <group delimiter=": " prefix=" [" suffix="]">
        <text term="accessed"/>
        <date form="numeric" variable="accessed"/>
      </group>
    </group>
  </macro>
  <macro name="publisher">
    <group>
      <choose>
        <if match="any" variable="genre">
          <text variable="genre" prefix=", "/>
        </if>
      </choose>
      <text variable="publisher-place" prefix=", "/>
      <date date-parts="year" form="text" variable="issued" prefix=" "/>
    </group>
  </macro>
  <macro name="title">
    <group delimiter=" ">
      <text variable="title"/>
      <names variable="container-author" prefix="(" suffix=")"/>
    </group>
  </macro>
  <citation et-al-min="4" et-al-use-first="3" disambiguate-add-names="true">
    <layout delimiter="; " suffix=". ">
      <choose>
        <if position="ibid-with-locator">
          <group delimiter=", ">
            <text term="ibid"/>
            <text macro="point-locators-subsequent"/>
          </group>
        </if>
        <else-if position="ibid">
          <text term="ibid"/>
        </else-if>
        <else-if position="subsequent">
          <group delimiter=", ">
            <group delimiter=" ">
              <group delimiter=": ">
                <text macro="contributor-short"/>
                <text macro="title-short"/>
              </group>
              <date variable="issued">
                <date-part name="year"/>
              </date>
              <text variable="first-reference-note-number" prefix="(vgl. Fn. " suffix=")"/>
            </group>
            <text macro="point-locators-subsequent"/>
          </group>
        </else-if>
        <else>
          <group>
            <group delimiter=": ">
              <text macro="contributor-long"/>
              <text macro="title"/>
            </group>
            <choose>
              <if type="article article-journal" match="any">
                <group>
                  <group delimiter=" ">
                    <group delimiter=": ">
                      <text term="in" prefix=", "/>
                      <text variable="container-title"/>
                    </group>
                    <text variable="volume"/>
                    <date date-parts="year" form="numeric" variable="issued" prefix="(" suffix=")"/>
                  </group>
                  <group>
                    <choose>
                      <if match="any" variable="issue">
                        <label prefix=", " variable="issue"/>
                        <number prefix=" " variable="issue"/>
                      </if>
                    </choose>
                  </group>
                  <text macro="pages"/>
                </group>
              </if>
              <else-if match="all" variable="archive call-number">
                <date form="text" variable="issued" prefix=", "/>
                <text variable="archive" prefix=", "/>
                <text variable="call-number" prefix=", "/>
              </else-if>
              <else-if type="chapter" match="any">
                <group>
                  <text macro="container-title"/>
                  <text macro="editor"/>
                  <text macro="volume-for-books"/>
                  <text macro="edition"/>
                  <text macro="publisher"/>
                  <text macro="pages"/>
                </group>
              </else-if>
              <else-if type="book thesis" match="any">
                <group>
                  <text macro="volume-for-books"/>
                  <text macro="edition"/>
                  <text macro="publisher"/>
                </group>
              </else-if>
              <else-if type="webpage post post-weblog" match="any">
                <group>
                  <text macro="url-with-date"/>
                </group>
              </else-if>
              <else-if type="article-magazine article-newspaper" match="any">
                <group>
                  <group delimiter=" ">
                    <text macro="container-title"/>
                    <group delimiter=" ">
                      <label variable="number" form="short"/>
                      <text variable="issue"/>
                    </group>
                    <date form="numeric" variable="issued" prefix="(" suffix=")"/>
                  </group>
                  <text macro="pages"/>
                </group>
              </else-if>
              <else>
                <text variable="container-title" prefix=", "/>
                <group>
                  <choose>
                    <if match="all" variable="publisher-place">
                      <text variable="publisher-place" prefix=", "/>
                      <date date-parts="year" form="numeric" variable="issued" prefix=" "/>
                    </if>
                    <else>
                      <date date-parts="year" form="numeric" variable="issued" prefix=", "/>
                    </else>
                  </choose>
                  <text macro="url-with-date"/>
                  <text macro="serie-with-number" prefix="(" suffix=")"/>
                </group>
              </else>
            </choose>
            <text macro="point-locators"/>
          </group>
        </else>
      </choose>
    </layout>
  </citation>
  <bibliography et-al-min="4" et-al-use-first="3" entry-spacing="0" hanging-indent="true">
    <sort>
      <key variable="author"/>
      <key variable="issued"/>
    </sort>
    <layout suffix=".">
      <group delimiter="">
        <group delimiter=": ">
          <text macro="contributor-long"/>
          <text macro="title"/>
        </group>
        <choose>
          <if type="article article-journal" match="any">
            <group>
              <group delimiter=" ">
                <text macro="container-title"/>
                <text variable="volume"/>
                <date variable="issued" prefix=" (" suffix=")">
                  <date-part name="year"/>
                </date>
              </group>
              <group delimiter=" ">
                <choose>
                  <if match="any" variable="issue">
                    <label prefix=", " variable="issue"/>
                    <number variable="issue"/>
                  </if>
                </choose>
              </group>
              <text macro="pages"/>
            </group>
          </if>
          <else-if match="all" variable="archive call-number">
            <date form="text" variable="issued" prefix=", "/>
            <text variable="archive" prefix=", "/>
            <text variable="call-number" prefix=", "/>
          </else-if>
          <else-if type="chapter" match="any">
            <group>
              <text macro="container-title"/>
              <text macro="editor"/>
              <text macro="volume-for-books"/>
              <text macro="edition"/>
              <text macro="publisher"/>
              <text macro="pages"/>
            </group>
          </else-if>
          <else-if type="book thesis" match="any">
            <group>
              <text macro="volume-for-books"/>
              <text macro="edition"/>
              <text macro="publisher"/>
            </group>
          </else-if>
          <else-if type="webpage post post-weblog" match="any">
            <group>
              <text macro="url-with-date"/>
            </group>
          </else-if>
          <else-if type="article-magazine article-newspaper" match="any">
            <group>
              <group delimiter=" ">
                <text macro="container-title"/>
                <group delimiter=" ">
                  <label variable="number" form="short"/>
                  <text variable="issue"/>
                </group>
                <date form="numeric" variable="issued" prefix="(" suffix=")"/>
              </group>
              <text macro="pages"/>
            </group>
          </else-if>
          <else>
            <text variable="container-title" prefix=", "/>
            <group>
              <choose>
                <if match="all" variable="publisher">
                  <text variable="publisher-place" prefix=", "/>
                  <date date-parts="year" form="numeric" variable="issued" prefix=" "/>
                </if>
                <else>
                  <date date-parts="year" form="numeric" variable="issued" prefix=", "/>
                </else>
              </choose>
              <text macro="url-with-date"/>
              <text macro="serie-with-number" prefix="(" suffix=")"/>
            </group>
          </else>
        </choose>
      </group>
    </layout>
  </bibliography>
</style>
