<?xml version="1.0" encoding="utf-8"?>
<style xmlns="http://purl.org/net/xbiblio/csl" class="note" version="1.0" page-range-format="expanded" demote-non-dropping-particle="sort-only" default-locale="it-IT">
  <info>
    <title>Cronache di Archeologia (Italiano)</title>
    <id>http://www.zotero.org/styles/cronache-di-archeologia</id>
    <link href="http://www.zotero.org/styles/cronache-di-archeologia" rel="self"/>
    <link href="https://edizioniquasar.it/collections/cronache-di-archeologia" rel="documentation"/>
    <link href="https://github.com/citation-style-language/styles/files/11929183/CdA_Norme.editoriali.per.gli.Autori.pdf" rel="documentation"/>
    <author>
      <name>Pietro Melita</name>
    </author>
    <category citation-format="note"/>
    <category field="history"/>
    <category field="anthropology"/>
    <issn>2532-8484</issn>
    <eissn>2612-0941</eissn>
    <updated>2025-09-04T15:30:11+00:00</updated>
    <rights license="http://creativecommons.org/licenses/by-sa/3.0/">This work is licensed under a Creative Commons Attribution-ShareAlike 3.0 License</rights>
  </info>
  <locale xml:lang="it">
    <terms>
      <term name="et-al">et alii</term>
      <term name="editor" form="short">
        <single>ed.</single>
        <multiple>edd.</multiple>
      </term>
    </terms>
  </locale>
  <macro name="author">
    <names variable="author" font-variant="normal" delimiter=", ">
      <name font-variant="small-caps" initialize-with="." sort-separator=" "/>
      <et-al font-style="italic"/>
      <substitute>
        <text macro="editor"/>
      </substitute>
    </names>
  </macro>
  <macro name="editor">
    <group delimiter=", ">
      <names variable="container-author">
        <name font-variant="small-caps" initialize-with=". " delimiter=", " sort-separator=", "/>
      </names>
      <names variable="editor translator" delimiter=", ">
        <name font-variant="small-caps" initialize-with="."/>
        <label form="short" prefix=" (" suffix=")"/>
      </names>
    </group>
  </macro>
  <macro name="pages">
    <group delimiter=" ">
      <label variable="page" form="short"/>
      <text variable="page"/>
    </group>
  </macro>
  <macro name="author-short">
    <names variable="author">
      <name form="short" font-variant="small-caps" delimiter=", "/>
      <et-al font-variant="normal" font-style="italic"/>
      <substitute>
        <names variable="editor"/>
        <text variable="title-short" font-style="italic"/>
      </substitute>
    </names>
  </macro>
  <macro name="locator">
    <group delimiter=" " prefix=", ">
      <label variable="locator" form="short"/>
      <text variable="locator"/>
    </group>
  </macro>
  <macro name="title">
    <choose>
      <if type="book" match="any">
        <text variable="title" font-style="italic"/>
      </if>
      <else-if type="webpage" match="any">
        <text variable="title"/>
      </else-if>
      <else-if variable="container-title" match="none">
        <text variable="title" font-style="italic"/>
      </else-if>
      <else>
        <text variable="title"/>
      </else>
    </choose>
  </macro>
  <macro name="publisher">
    <text variable="publisher-place"/>
  </macro>
  <macro name="year-date">
    <choose>
      <if variable="issued">
        <date variable="issued">
          <date-part name="year"/>
        </date>
      </if>
    </choose>
  </macro>
  <macro name="edition">
    <text variable="edition" vertical-align="sup"/>
  </macro>
  <citation et-al-min="3" et-al-use-first="1" disambiguate-add-year-suffix="true" collapse="year">
    <layout suffix="" delimiter=" ; ">
      <group>
        <text macro="author-short" suffix=" "/>
        <text macro="year-date"/>
        <text macro="locator"/>
      </group>
    </layout>
  </citation>
  <bibliography>
    <sort>
      <key macro="author"/>
      <key variable="issued"/>
      <key variable="page-first"/>
      <key variable="title"/>
    </sort>
    <layout suffix=".">
      <group>
        <choose>
          <if variable="author">
            <names variable="author" font-weight="normal">
              <name form="short" font-variant="small-caps" et-al-min="3" et-al-use-first="1" name-as-sort-order="first"/>
              <et-al font-variant="normal" font-style="italic"/>
            </names>
          </if>
          <else-if variable="editor">
            <names variable="editor">
              <name form="short" font-variant="small-caps" et-al-min="3" et-al-use-first="1" name-as-sort-order="first"/>
              <et-al font-variant="normal" font-style="italic"/>
            </names>
          </else-if>
          <else>
            <text variable="title-short" font-variant="small-caps"/>
          </else>
        </choose>
        <text macro="year-date" prefix=" " suffix=" = "/>
        <group>
          <text macro="author" suffix=", "/>
          <choose>
            <if type="thesis">
              <group delimiter=", ">
                <text macro="title" font-style="italic"/>
                <text variable="genre"/>
                <text variable="publisher"/>
                <text macro="year-date"/>
              </group>
            </if>
            <else-if type="article-journal article-magazine article-newspaper broadcast personal_communication thesis webpage" match="any">
              <group delimiter=", ">
                <text macro="title" font-style="italic" quotes="false"/>
                <group delimiter=" " prefix="in ">
                  <choose>
                    <if match="any" variable="title-short">
                      <text variable="title-short" form="short" font-style="italic"/>
                    </if>
                    <else>
                      <text variable="collection-title"/>
                    </else>
                  </choose>
                  <choose>
                    <if match="none" variable="volume issue">
                      <date form="text" variable="issued"/>
                    </if>
                  </choose>
                  <group delimiter="-">
                    <text variable="volume"/>
                    <text variable="issue"/>
                  </group>
                  <choose>
                    <if variable="URL" match="any">
                      <text variable="URL" prefix="&lt;" suffix="&gt;"/>
                    </if>
                  </choose>
                </group>
                <choose>
                  <if match="any" variable="volume issue">
                    <text macro="year-date"/>
                  </if>
                </choose>
                <text macro="pages"/>
              </group>
            </else-if>
            <else-if type="book graphic" match="any">
              <group delimiter=", ">
                <group>
                  <text macro="title" font-style="italic" quotes="false"/>
                  <text macro="edition"/>
                </group>
                <group>
                  <choose>
                    <if match="all" variable="title-short">
                      <text variable="title-short" form="short" font-style="italic"/>
                    </if>
                    <else>
                      <text variable="collection-title"/>
                    </else>
                  </choose>
                  <text variable="collection-number" prefix=" "/>
                </group>
                <group delimiter=" ">
                  <text macro="publisher"/>
                  <text macro="year-date"/>
                </group>
              </group>
            </else-if>
            <else-if type="entry-dictionary entry-encyclopedia" match="any">
              <group delimiter=", ">
                <group>
                  <text term="sub-verbo" form="short" suffix=" "/>
                  <text macro="title" font-style="italic" quotes="false"/>
                </group>
                <group>
                  <choose>
                    <if variable="title-short" match="any">
                      <text variable="title" form="short" font-style="italic" prefix="in "/>
                    </if>
                    <else>
                      <text variable="container-title" form="short" font-style="italic" prefix="in "/>
                    </else>
                  </choose>
                  <group delimiter=" ">
                    <text variable="volume" prefix=" "/>
                  </group>
                </group>
                <text macro="year-date"/>
                <text macro="pages"/>
              </group>
            </else-if>
            <else-if type="chapter paper-conference" match="any">
              <text macro="title" font-style="italic" quotes="false" suffix=", "/>
              <group delimiter=", " prefix="in ">
                <text macro="editor"/>
                <text variable="container-title" font-style="italic"/>
                <text variable="event-title"/>
                <text variable="volume"/>
                <text variable="number-of-volumes"/>
                <group delimiter=" ">
                  <text macro="publisher"/>
                  <text macro="year-date"/>
                </group>
                <text macro="pages"/>
              </group>
            </else-if>
          </choose>
        </group>
      </group>
    </layout>
  </bibliography>
</style>
