<?xml version="1.0" encoding="utf-8"?>
<style xmlns="http://purl.org/net/xbiblio/csl" version="1.0" class="in-text" default-locale="en" page-range-format="minimal">
  <info>
    <title>Marine Policy</title>
    <id>http://www.zotero.org/styles/marine-policy</id>
    <link href="http://www.zotero.org/styles/marine-policy" rel="self"/>
    <author>
      <name>David M. Kaplan</name>
      <uri>http://www.zotero.org/dmk</uri>
      <!-- This style was originally based on elsevier-with-titles style -->
    </author>
    <contributor>
      <name>Richard Karnesky</name>
      <email>karnesky+zotero@gmail.com</email>
      <uri>http://arc.nucapt.northwestern.edu/Richard_Karnesky</uri>
    </contributor>
    <contributor>
      <name>Rintze Zelle</name>
      <uri>http://twitter.com/rintzezelle</uri>
    </contributor>
    <contributor>
      <name>Sebastian Karcher</name>
    </contributor>
    <category citation-format="numeric"/>
    <updated>2011-03-29T16:00:00+00:00</updated>
    <summary>A style for the journal Marine Policy.  This style might also apply to certain other journals on Elsevier's Geography, Planning and Development Portal.</summary>
    <link href="http://www.elsevier.com/wps/find/journaldescription.cws_home/30453/authorinstructions" rel="documentation"/>
    <rights>This work is licensed under a Creative Commons Attribution-Share Alike 3.0 United States License: http://creativecommons.org/licenses/by-sa/3.0/us/</rights>
  </info>

  <macro name="author">
    <names variable="author">
      <name name-as-sort-order="all"  sort-separator=" " initialize-with=""
	    delimiter=", " delimiter-precedes-last="always"/>
      <label form="short" prefix=" (" suffix=")" text-case="capitalize-first"/>
      <substitute>
	<names variable="editor"/>
	<names variable="translator"/>
	<text variable="title"/>
      </substitute>
    </names>
  </macro>

  <macro name="editor">
    <names variable="editor">
      <name initialize-with="" delimiter=", " delimiter-precedes-last="always" name-as-sort-order="all"/>
      <label form="long" prefix=", " text-case="lowercase" suffix=""/>
    </names>
  </macro>

  <macro name="year-date">
    <choose>
      <if variable="issued">
	<date variable="issued">
	  <date-part name="year"/>
	</date>
      </if>
      <else>
	<text term="no date"/>
      </else>
    </choose>
  </macro>
  <macro name="publisher">
    <text variable="publisher-place" suffix=": "/>
    <text variable="publisher" suffix="; "/>
    <text macro="year-date"/>
  </macro>
  <macro name="edition">
    <!--TODO: CSL should have low numeric be text (e.g. '3'->'third')-->
    <choose>
      <if is-numeric="edition">
	<group delimiter=" ">
	  <number variable="edition" form="ordinal"/>
	  <text term="edition" form="short" suffix="."/>
	</group>
      </if>
      <else>
	<text variable="edition"/>
      </else>
    </choose>
  </macro>
  
  <citation collapse="citation-number">
    <sort>
      <key variable="citation-number" sort="ascending"/>
    </sort>
    <layout prefix="[" suffix="]" delimiter=",">
      <text variable="citation-number"/>
    </layout>
  </citation>
  
  <bibliography et-al-min="7" et-al-use-first="6" second-field-align="flush">
    <layout suffix=".">
      <text variable="citation-number" prefix="[" suffix="]"/>
      <text macro="author" prefix=" " suffix=". "/>
      <choose>
	<if type="book">
	  <group delimiter=". ">
	    <text variable="title"/>
	    <text macro="edition"/>
	    <text macro="publisher"/>
	  </group>
	</if>
	<else-if type="chapter">
	  <text variable="title" suffix=". "/>
	  <text term="in" text-case="capitalize-first" suffix=": "/>
	  <text macro="editor" suffix=". "/>
	  <text variable="container-title" form="short" text-case="title" suffix=". "/>
	  <text macro="edition" suffix=". "/>
	  <text macro="publisher" suffix=". "/>
	  <group delimiter=" ">
	   	    <text variable="page" prefix="p. "/>
	  </group>
	</else-if>
	<else-if type="thesis">
	  <group delimiter=". ">
	    <text variable="title"/>
	    <text variable="genre"/>
	    <text variable="publisher"/>
	    <text macro="year-date"/>
	  </group>	 
	</else-if>
	<else>
	  <group delimiter=" ">
	    <text variable="title" suffix="."/>
	    <text variable="container-title" form="long" text-case="title"/>
	    <text macro="year-date" suffix=";"/>
	    <text variable="volume" suffix=":"/>
	    <text variable="page" form="short"/>
	  </group>
	</else>
      </choose>
    </layout>
  </bibliography>
</style>
