<?xml version="1.0" encoding="utf-8"?>
<style xmlns="http://purl.org/net/xbiblio/csl" version="1.0.2">
  <info>
    <title>The African Journal of Food, Agriculture, Nutrition and Development</title>
    <id>http://www.zotero.org/styles/african-journal-of-food</id>
    <link href="http://www.zotero.org/styles/african-journal-of-food" rel="self"/>
    <author>
      <name>Sithokozile Moyo</name>
    </author>
    <category citation-format="numeric"/>
    <updated>2025-04-01</updated>
    <summary>
      CSL style for the African Journal of Food and Nutrition.
      <br/><strong>Journal articles:</strong> Author(s). Title. <em>Journal Abbreviation</em>. Year; <strong>Volume(Issue)</strong>: Pages.
      <br/><strong>Chapters in edited books:</strong> Author(s). Title. In: Editor(s); Year; <strong>Chapter-number</strong>: Pages.
      <br/>Bibliography entries are numbered with no hanging indent.
    </summary>
  </info>

  <!-- 1) Macros for common elements -->

  <!-- Author names in bold -->
  <macro name="author">
    <names variable="author" font-weight="bold">
      <name and="text" delimiter=", " initialize-with="."/>
    </names>
  </macro>

  <!-- Title of the article or chapter (non-italicized) -->
  <macro name="title">
    <text variable="title"/>
  </macro>

  <!-- Journal abbreviation in italics (uses short form if available) -->
  <macro name="journal-container">
    <text variable="container-title" form="short" font-style="italic"/>
  </macro>

  <!-- For other container titles (e.g., books) -->
  <macro name="container">
    <text variable="container-title" font-style="italic"/>
  </macro>

  <!-- Publication year -->
  <macro name="year">
    <date variable="issued">
      <date-part name="year"/>
    </date>
  </macro>

  <!-- Volume in bold -->
  <macro name="volume-bold">
    <text variable="volume" font-weight="bold"/>
  </macro>

  <!-- Issue in bold, enclosed in parentheses -->
  <macro name="issue-bold">
    <text variable="issue" prefix="(" suffix=")" font-weight="bold"/>
  </macro>

  <!-- Pages in regular font -->
  <macro name="pages">
    <text variable="page"/>
  </macro>

  <!-- Macro for editors with initials (for chapters) -->
  <macro name="editor">
    <names variable="editor" initialize-with="." delimiter=", ">
      <name form="long"/>
    </names>
  </macro>

  <!-- 2) In-text citation: numeric in square brackets -->
  <citation>
    <sort>
      <key variable="citation-number"/>
    </sort>
    <layout prefix="[" suffix="]" delimiter=", ">
      <text variable="citation-number"/>
    </layout>
  </citation>

  <!-- 3) Bibliography layout with numbering enabled and no hanging indent -->
  <bibliography numbered="true" line-spacing="2">
    <sort>
      <key variable="citation-number"/>
    </sort>
    <choose>

      <!-- For chapters in edited books -->
      <if type="chapter article-in-book" match="any">
        <layout suffix=".">
          <group delimiter=" ">
            <!-- Bibliography number -->
            <text variable="citation-number" suffix=". "/>
            <!-- Authors (bold) -->
            <text macro="author" suffix=". "/>
            <!-- Chapter title -->
            <text macro="title" suffix=". "/>
            <!-- "In:" before editors -->
            <text value="In:" suffix=" "/>
            <!-- Editors with initials -->
            <text macro="editor" suffix=". "/>
            <!-- Year with semicolon -->
            <text macro="year" suffix="; "/>
            <!-- Chapter number in bold -->
            <text variable="chapter-number" font-weight="bold" suffix=": "/>
            <!-- Pages (regular) -->
            <text macro="pages"/>
          </group>
        </layout>
      </if>

      <!-- For journal articles -->
      <else-if type="article-journal" match="any">
        <layout suffix=".">
          <group delimiter=" ">
            <!-- Bibliography number -->
            <text variable="citation-number" suffix=". "/>
            <!-- Authors (bold) -->
            <text macro="author" suffix=". "/>
            <!-- Article title -->
            <text macro="title" suffix=". "/>
            <!-- Journal abbreviation in italics -->
            <text macro="journal-container" suffix=". "/>
            <!-- Year with semicolon -->
            <text macro="year" suffix=";"/>
            <!-- Bold volume -->
            <text macro="volume-bold"/>
            <!-- Bold issue -->
            <text macro="issue-bold"/>
            <!-- Pages in regular font, prefixed by a colon -->
            <text macro="pages" prefix=":"/>
          </group>
        </layout>
      </else-if>

      <!-- For all other references -->
      <else>
        <layout suffix=".">
          <group delimiter=" ">
            <!-- Bibliography number -->
            <text variable="citation-number" suffix=". "/>
            <!-- Authors in bold -->
            <text macro="author" suffix=". "/>
            <!-- Title -->
            <text macro="title" suffix=". "/>
            <!-- Container title in italics -->
            <text macro="container" suffix=". "/>
            <!-- Year with semicolon -->
            <text macro="year" suffix=";"/>
            <!-- Volume (if any) -->
            <text variable="volume"/>
            <text variable="issue" prefix="(" suffix=")"/>
            <!-- Pages prefixed by a colon -->
            <text variable="page" prefix=":"/>
          </group>
        </layout>
      </else>

    </choose>
  </bibliography>
</style>
