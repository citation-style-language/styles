  <citation>
    <layout delimiter="; ">
      <text variable="citation-number" prefix="[" suffix="]"/>
    </layout>
  </citation>

  <bibliography>
    <layout>
      <text variable="citation-number" prefix="[" suffix="] "/>
      <text macro="author" suffix=". "/>
      <text macro="title" suffix=". "/>
      <text macro="edition"/>
      <text macro="place-publisher" suffix=", "/>
      <text macro="issued" suffix=". "/>
      <text macro="series"/>
      <text macro="number"/>
      <text macro="isbn-issn" suffix=". "/>
      <text macro="url"/>
      <text macro="pages"/>
    </layout>
  </bibliography>

  <macro name="author">
    <names variable="author">
      <name form="long" delimiter=", " and="text"/>
    </names>
  </macro>

  <macro name="editor">
    <names variable="editor">
      <name form="long" delimiter=", " and="text"/>
      <label form="short" prefix=", " text-case="lowercase" suffix="."/>
    </names>
  </macro>

  <macro name="title">
    <text variable="title" font-style="italic"/>
    <text variable="genre" prefix=" [" suffix="]"/>
  </macro>

  <macro name="edition">
    <text variable="edition" prefix=", " suffix=" ed."/>
  </macro>

  <macro name="place-publisher">
    <text variable="publisher-place"/>
    <text variable="publisher" prefix=": "/>
  </macro>

  <macro name="issued">
    <date variable="issued">
      <date-part name="year"/>
    </date>
  </macro>

  <macro name="series">
    <text variable="collection-title" prefix=" (" suffix=")"/>
  </macro>

  <macro name="number">
    <text variable="number" prefix=", n. "/>
  </macro>

  <macro name="isbn-issn">
    <group delimiter=" ">
      <text variable="ISBN" prefix="ISBN: "/>
      <text variable="ISSN" prefix=" ISSN: "/>
    </group>
  </macro>

  <macro name="url">
    <group delimiter=" ">
      <text variable="URL" prefix="Disponible en: "/>
      <date variable="accessed" prefix="(consulta: ">
        <date-part name="day" suffix="/"/>
        <date-part name="month" suffix="/"/>
        <date-part name="year" suffix=")"/>
      </date>
    </group>
  </macro>

  <macro name="pages">
    <text variable="page" prefix=", p. "/>
  </macro>
</style>
