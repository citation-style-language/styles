  <!--_-_-_-_-_-SECTION DEFINITION DES MACROS-_-_-_-_-_-_-->
  <!-- MACRO AUTEUR, EDITEUR SCIENTIFIQUE (ndbp) -->
  <macro name="author-ndbp">
    <choose>
      <if type="interview">
        <names variable="interviewer">
          <name form="long" and="text" delimiter-precedes-last="never" sort-separator=" " initialize-with=".">
            <name-part name="family" font-variant="small-caps"/>
          </name>
          <et-al font-style="italic"/>
        </names>
      </if>
      <else>
        <choose>
          <if variable="author">
            <names variable="author">
              <name form="long" and="text" delimiter-precedes-last="never" sort-separator=" " initialize-with=".">
                <name-part name="family" font-variant="small-caps"/>
              </name>
              <et-al font-style="italic"/>
            </names>
          </if>
          <else-if variable="editor">
            <names variable="editor">
              <name form="long" and="text" delimiter-precedes-last="never" sort-separator=" " initialize-with=".">
                <name-part name="family" font-variant="small-caps"/>
              </name>
              <et-al font-style="italic"/>
              <label form="short" prefix=" (" suffix=".)"/>
            </names>
          </else-if>
          <else>
            <text term="anonymous" form="short" text-case="capitalize-first"/>
          </else>
        </choose>
      </else>
    </choose>
  </macro>
  <!-- MACRO AUTEUR, EDITEUR SCIENTIFIQUE (biblio) -->
  <macro name="author-bib">
    <choose>
      <if type="interview">
        <names variable="interviewer">
          <name form="long" and="text" delimiter-precedes-last="never" name-as-sort-order="first" sort-separator=" ">
            <name-part name="family" font-variant="small-caps"/>
          </name>
          <et-al font-style="italic"/>
        </names>
      </if>
      <else>
        <choose>
          <if variable="author">
            <names variable="author">
              <name form="long" and="text" delimiter-precedes-last="never" name-as-sort-order="first" sort-separator=" ">
                <name-part name="family" font-variant="small-caps"/>
              </name>
              <et-al font-style="italic"/>
            </names>
          </if>
          <else-if variable="editor">
            <names variable="editor">
              <name form="long" and="text" delimiter-precedes-last="never" name-as-sort-order="first" sort-separator=" ">
                <name-part name="family" font-variant="small-caps"/>
              </name>
              <et-al font-style="italic"/>
              <label form="short" prefix="&#160;(" suffix=".)"/>
            </names>
          </else-if>
          <else>
            <text term="anonymous" text-case="capitalize-first"/>
          </else>
        </choose>
      </else>
    </choose>
  </macro>
  <!-- MACRO EDITEUR SCIENTIFIQUE (ndbp et biblio) -->
  <macro name="editor">
    <choose>
      <if type="interview">
        <names variable="author" prefix=" entretien avec ">
          <name form="long" and="text" delimiter-precedes-last="never" sort-separator=" " initialize-with="."/>
          <et-al font-style="italic"/>
        </names>
      </if>
      <else>
        <names variable="editor">
          <name form="long" and="text" delimiter-precedes-last="never" sort-separator=" " initialize-with="."/>
          <et-al font-style="italic"/>
          <label form="short" prefix="&#160;(" suffix=".)"/>
        </names>
      </else>
    </choose>
  </macro>
  <!-- MACRO AUTEUR DU LIVRE (ndbp et biblio)-->
  <macro name="book_author">
    <names variable="container-author">
      <name form="long" and="text" delimiter-precedes-last="never" sort-separator=" " initialize-with="."/>
      <et-al font-style="italic"/>
    </names>
  </macro>
  <!-- MACRO TRANSLATOR (ndbp et biblio)-->
  <macro name="translator">
    <names variable="translator">
      <name form="long" and="text" delimiter-precedes-last="never" sort-separator=" " initialize-with="."/>
      <et-al font-style="italic"/>
      <label form="short" prefix="&#160;(" suffix=".)"/>
    </names>
  </macro>
  <!-- MACRO TITLE, PAR TYPE DE DOCUMENT (ndbp et biblio)-->
  <macro name="title">
    <choose>
      <!-- Pour les bill book legal_case report song motion_picture graphic thesis -->
      <if type="bill book legal_case report song motion_picture graphic thesis" match="any">
        <text variable="title" text-case="capitalize-first" font-style="italic"/>
      </if>
      <!-- Pour les personal_communication (lettres) -->
      <else-if type="personal_communication" match="any">
        <group delimiter=", ">
          <names variable="recipient" prefix="lettre à ">
            <name form="long" and="text" sort-separator=" " initialize-with="."/>
          </names>
          <!-- <text variable="title" text-case="capitalize-first" quotes="true"/> : le titre, peu utile pour une lettre, reste caché -->
        </group>
      </else-if>
      <!-- Pour tous les autres cas -->
      <else>
        <text variable="title" text-case="capitalize-first" quotes="true"/>
      </else>
    </choose>
  </macro>
  <!-- MACRO CONTAINER (container-title précédé de son book-author ou editor), PAR TYPE DE DOCUMENT (ndbp et biblio) : fait appel aux macros BOOK_AUTHOR et EDITOR-->
  <macro name="container">
    <choose>
      <!-- Pour les article-journal article-newspaper article-magazine -->
      <if type="article-journal article-newspaper article-magazine" match="any">
        <text variable="container-title" font-style="italic"/>
      </if>
      <!-- Pour les broadcast -->
      <else-if type="broadcast" match="any">
        <group delimiter=" ">
          <text term="in"/>
          <group delimiter=", ">
            <text variable="container-title" font-style="italic" prefix="l’émission "/>
          </group>
        </group>
      </else-if>
      <!-- Pour les chapter paper-conference entry-dictionary entry-encyclopedia -->
      <else-if type="chapter paper-conference entry-dictionary entry-encyclopedia" match="any">
        <group delimiter=" ">
          <text term="in"/>
          <group delimiter=", ">
            <choose>
              <if variable="container-author" match="none">
                <choose>
                  <if variable="editor">
                    <text macro="editor"/>
                  </if>
                </choose>
              </if>
              <else>
                <text macro="book_author"/>
              </else>
            </choose>
            <text variable="container-title" font-style="italic" text-case="capitalize-first"/>
          </group>
        </group>
      </else-if>
      <!-- Pour les webpage et weblog -->
      <else-if type="webpage post-weblog" match="any">
        <text variable="container-title" font-style="italic" prefix=" sur "/>
      </else-if>
      <!-- Pour les présentations -->
      <else-if type="speech" match="any">
        <text variable="event" font-style="italic" prefix=" lors de la rencontre "/>
      </else-if>
      <!-- Pour tous les autres cas -->
      <else>
        <group delimiter=" ">
          <text term="in"/>
          <text variable="container-title" font-style="italic" text-case="capitalize-first"/>
        </group>
      </else>
    </choose>
  </macro>
  <!-- MACRO PUB-PLACE (ndbp)-->
  <macro name="pub-place-ndbp">
    <choose>
      <if type="bill book chapter entry-dictionary entry-encyclopedia legal_case manuscript paper-conference" match="any">
        <choose>
          <if variable="publisher-place" match="any">
            <text variable="publisher-place"/>
          </if>
          <else>
            <text value="s.&#160;l."/>
          </else>
        </choose>
      </if>
      <else-if type="thesis graphic motion_picture broadcast report song" match="any">
        <text variable="publisher-place"/>
      </else-if>
      <else-if type="speech" match="any">
        <text variable="event-place"/>
      </else-if>
    </choose>
  </macro>
  <!-- MACRO PUB-PLACE (biblio)-->
  <macro name="pub-place-bib">
    <choose>
      <if type="bill book chapter entry-dictionary entry-encyclopedia legal_case manuscript paper-conference" match="any">
        <choose>
          <if variable="publisher-place" match="any">
            <text variable="publisher-place"/>
          </if>
          <else>
            <text value="sans lieu"/>
          </else>
        </choose>
      </if>
      <else-if type="thesis graphic motion_picture broadcast report song" match="any">
        <text variable="publisher-place"/>
      </else-if>
      <else-if type="speech" match="any">
        <text variable="event-place"/>
      </else-if>
    </choose>
  </macro>
  <!-- MACRO PUBLISHER (ndbp et biblio)-->
  <macro name="publisher">
    <text variable="publisher"/>
  </macro>
  <!-- MACRO URL ET DATE PAR TYPE DE DOCUMENT (ndbp)-->
  <macro name="date-ndbp">
    <choose>
      <!-- Pour les article-journal article-newspaper article-magazine broadcast speech personal_communication interview manuscript -->
      <if type="article-journal article-newspaper article-magazine broadcast speech personal_communication interview manuscript" match="any">
        <choose>
          <if variable="issued" match="any">
            <date variable="issued" form="text">
              <date-part name="day" form="ordinal"/>
              <date-part name="month"/>
              <date-part name="year"/>
            </date>
          </if>
          <else>
            <text term="no date" form="short"/>
          </else>
        </choose>
      </if>
      <!-- Pour les webpage post-weblog -->
      <else-if type="webpage post-weblog" match="any">
        <group delimiter=", ">
          <text variable="URL"/>
          <choose>
            <if variable="issued" match="any">
              <date variable="issued" form="text">
                <date-part name="day" form="ordinal"/>
                <date-part name="month"/>
                <date-part name="year"/>
              </date>
            </if>
            <else>
              <text term="no date" form="short"/>
            </else>
          </choose>
        </group>
      </else-if>
      <!-- Pour le reste -->
      <else>
        <choose>
          <if variable="issued" match="any">
            <date variable="issued">
              <date-part name="year"/>
            </date>
          </if>
          <else>
            <text term="no date" form="short"/>
          </else>
        </choose>
      </else>
    </choose>
  </macro>
  <!-- MACRO URL ET DATE PAR TYPE DE DOCUMENT (biblio)-->
  <macro name="date-bib">
    <choose>
      <!-- Pour les article-journal article-newspaper article-magazine broadcast speech personal_communication interview manuscript -->
      <if type="article-journal article-newspaper article-magazine broadcast speech personal_communication interview manuscript" match="any">
        <group delimiter=" ">
          <choose>
            <if variable="issued" match="any">
              <date variable="issued" form="text">
                <date-part name="day" form="ordinal"/>
                <date-part name="month"/>
                <date-part name="year"/>
              </date>
            </if>
            <else>
              <text term="no date"/>
            </else>
          </choose>
          <group delimiter=", " prefix="(en ligne&#160;: " suffix=")">
            <text variable="URL"/>
            <date variable="accessed" form="text" prefix="consulté le ">
              <date-part name="day" form="ordinal"/>
              <date-part name="month"/>
              <date-part name="year"/>
            </date>
          </group>
        </group>
      </if>
      <!-- Pour les webpage post-weblog (comprend l'URL) -->
      <else-if type="webpage post-weblog" match="any">
        <group delimiter=", ">
          <text variable="URL"/>
          <choose>
            <if variable="issued" match="any">
              <date variable="issued" form="text" prefix="mis en ligne le ">
                <date-part name="day" form="ordinal"/>
                <date-part name="month"/>
                <date-part name="year"/>
              </date>
            </if>
            <else>
              <text term="no date"/>
            </else>
          </choose>
          <group delimiter=" ">
            <text term="accessed"/>
            <date variable="accessed" form="text">
              <date-part name="day" form="ordinal"/>
              <date-part name="month"/>
              <date-part name="year"/>
            </date>
          </group>
        </group>
      </else-if>
      <!-- Pour le reste -->
      <else>
        <choose>
          <if variable="issued" match="any">
            <date variable="issued">
              <date-part name="year"/>
            </date>
          </if>
          <else>
            <text term="no date"/>
          </else>
        </choose>
      </else>
    </choose>
  </macro>
  <!-- MACRO EDITION, FORMAT ET TYPE/GENRE (ndbp et biblio)-->
  <macro name="edition">
    <group delimiter=", ">
      <!-- édition -->
      <choose>
        <if type="bill book legal_case report song chapter paper-conference" match="any">
          <choose>
            <if is-numeric="edition">
              <group delimiter=" ">
                <number variable="edition" form="ordinal"/>
                <text term="edition" form="short"/>
              </group>
            </if>
            <else>
              <text variable="edition" text-case="capitalize-first"/>
            </else>
          </choose>
        </if>
        <else-if type="motion_picture broadcast" match="any">
          <group>
            <text term="issue" form="short" prefix="" suffix="&#160;"/>
            <text variable="number"/>
          </group>
        </else-if>
      </choose>
      <!-- format -->
      <choose>
        <if type="motion_picture graphic broadcast interview" match="any">
          <group delimiter=", ">
            <text variable="medium"/>
            <text variable="dimensions"/>
          </group>
        </if>
      </choose>
      <!-- type/genre -->
      <choose>
        <if type="thesis manuscript personal_communication">
          <text variable="genre"/>
        </if>
      </choose>
    </group>
  </macro>
  <!-- MACRO VOLUME pour les ouvrages à parution unique (ndbp et biblio)-->
  <macro name="volume_singlepublication">
    <choose>
      <if type="bill book graphic legal_case motion_picture paper-conference manuscript report song thesis chapter entry-dictionary entry-encyclopedia" match="any">
        <choose>
          <if variable="volume" match="none">
            <text variable="number-of-volumes"/>
            <text term="volume" form="short" prefix="&#160;"/>
          </if>
          <else-if variable="volume" match="any">
            <text term="volume" form="short" suffix=".&#160;"/>
            <text variable="volume"/>
            <text variable="number-of-volumes" prefix="/"/>
          </else-if>
        </choose>
      </if>
    </choose>
  </macro>
  <!-- MACRO VOLUME pour les périodiques (ndbp et biblio)-->
  <macro name="volume_periodical">
    <choose>
      <if type="article-journal article-magazine article-newspaper" match="any">
        <choose>
          <if is-numeric="volume">
            <text term="volume" form="short" suffix=".&#160;"/>
            <text variable="volume"/>
          </if>
          <else>
            <text variable="volume"/>
          </else>
        </choose>
      </if>
    </choose>
  </macro>
  <!-- MACRO NUMERO pour les périodiques (ndbp et biblio)-->
  <macro name="issue_periodical">
    <choose>
      <if type="article-journal article-magazine article-newspaper" match="any">
        <choose>
          <if is-numeric="issue">
            <text term="issue" form="short" suffix="&#160;"/>
            <text variable="issue"/>
          </if>
          <else>
            <text variable="issue"/>
          </else>
        </choose>
      </if>
    </choose>
  </macro>
  <!-- MACRO COLLECTION (ndbp et biblio)-->
  <macro name="collection">
    <group delimiter=", ">
      <group prefix="coll. ">
        <text variable="collection-title" quotes="true"/>
      </group>
      <group>
        <choose>
          <if is-numeric="collection-number">
            <text term="issue" form="short" suffix="&#160;"/>
            <text variable="collection-number"/>
          </if>
          <else>
            <text variable="collection-number"/>
          </else>
        </choose>
      </group>
    </group>
  </macro>
  <!-- MACRO PAGES PAR TYPE DE DOCUMENT (ndbp et biblio)-->
  <macro name="pages">
    <choose>
      <!-- Pour les textes qui sont déjà une partie d'ouvrage -->
      <if type="article-journal article-newspaper article-magazine chapter paper-conference entry-dictionary entry-encyclopedia" match="any">
        <choose>
          <if variable="locator" match="any">
            <group delimiter="&#160;">
              <label variable="locator" form="short"/>
              <text variable="locator"/>
            </group>
          </if>
          <else-if variable="locator" match="none">
            <group delimiter="&#160;">
              <label variable="page" form="short"/>
              <text variable="page"/>
            </group>
          </else-if>
        </choose>
      </if>
      <!-- Pour les autres cas -->
      <else>
        <group delimiter="&#160;">
          <label variable="locator" form="short"/>
          <text variable="locator"/>
        </group>
      </else>
    </choose>
  </macro>
  <!-- MACRO EDITION ORIGINALE (ndbp)-->
  <!-- Pour utiliser ces deux macros, ajouter manuellement dans le champ "Extra" (avant le texte) les balises suivantes: {:original-date: 1916}{:original-title: Titre} etc. -->
  <macro name="firstedition-ndbp">
    <date variable="original-date" prefix="(" suffix=")">
      <date-part name="year"/>
    </date>
  </macro>
  <!-- MACRO EDITION ORIGINALE (biblio)-->
  <macro name="firstedition-bib">
    <group delimiter=", " prefix="(édition originale&#160;: " suffix=")">
      <choose>
        <if type="bill book legal_case report song motion_picture graphic thesis" match="any">
          <text variable="original-title" text-case="capitalize-first" font-style="italic"/>
        </if>
        <else>
          <text variable="original-title" text-case="capitalize-first" quotes="true"/>
        </else>
      </choose>
      <text variable="original-publisher-place"/>
      <text variable="original-publisher"/>
      <date variable="original-date">
        <date-part name="year"/>
      </date>
    </group>
