  <!-- PARAMETRAGE MACROS -->
  <!-- Bloc auteur/éditeur/directeur -->
  <macro name="bloc_auteur">
    <names variable="author">
      <name and="text" name-as-sort-order="all" sort-separator=", " initialize-with=". " delimiter-precedes-last="never"/>
      <label prefix=", "/>
      <substitute>
        <names variable="editorial-director"/>
        <names variable="editor"/>
        <text variable="title" form="short" font-style="italic"/>
        <text term="anonymous"/>
      </substitute>
    </names>
  </macro>
  <macro name="bloc_auteur_short">
    <names variable="author">
      <name form="short" and="symbol" delimiter-precedes-et-al="never"/>
      <et-al font-style="italic"/>
      <substitute>
        <names variable="editorial-director"/>
        <names variable="editor"/>
        <text variable="title" form="short" font-style="italic"/>
        <text term="anonymous"/>
      </substitute>
    </names>
  </macro>
  <macro name="bloc_ed-dir">
    <choose>
      <if variable="editorial-director">
        <names variable="editorial-director">
          <name and="text" name-as-sort-order="all" sort-separator=", " initialize-with=". " delimiter-precedes-last="never"/>
          <label prefix=", "/>
        </names>
      </if>
      <else-if variable="editor">
        <names variable="editor">
          <name and="text" name-as-sort-order="all" sort-separator=", " initialize-with=". " delimiter-precedes-last="never"/>
          <label form="short" prefix=", "/>
        </names>
      </else-if>
    </choose>
  </macro>
  <macro name="bloc_ed-dir_short">
    <choose>
      <if variable="editorial-director">
        <names variable="editorial-director">
          <name form="short" and="symbol" delimiter-precedes-et-al="never"/>
          <et-al font-style="italic"/>
          <label form="short" prefix=", "/>
        </names>
      </if>
      <else-if variable="editor">
        <names variable="editor">
          <name form="short" and="symbol" delimiter-precedes-et-al="never"/>
          <et-al font-style="italic"/>
          <label form="short" prefix=", "/>
        </names>
      </else-if>
    </choose>
  </macro>
  <!-- Bloc date publication -->
  <macro name="date-pub">
    <choose>
      <if variable="issued accessed" match="any">
        <date variable="issued">
          <date-part name="year"/>
        </date>
      </if>
      <else-if variable="status">
        <text variable="status"/>
      </else-if>
      <else>
        <text term="forthcoming"/>
      </else>
    </choose>
  </macro>
  <macro name="bloc_date-publication">
    <date variable="original-date">
      <date-part name="year" prefix=" [" suffix="]"/>
    </date>
    <text macro="date-pub" prefix=" (" suffix=")"/>
  </macro>
  <macro name="bloc_date-publication_short">
    <date variable="original-date">
      <date-part name="year" prefix=" [" suffix="]"/>
    </date>
    <text macro="date-pub" prefix=" "/>
  </macro>
  <!-- Bloc titre -->
  <!-- Cas particulier : report / thesis -->
  <macro name="report-thesis_genre-num-pub">
    <choose>
      <if type="report thesis" match="any">
        <text variable="genre" prefix=", "/>
        <label variable="number" form="short" prefix=" "/>
        <number variable="number"/>
        <text variable="publisher" prefix=", "/>
      </if>
    </choose>
  </macro>
  <!-- collection-title + collection-number -->
  <macro name="collection-title_collection-number">
    <choose>
      <if variable="collection-number">
        <group prefix=", " delimiter=" ">
          <text variable="collection-title"/>
          <text variable="collection-number"/>
        </group>
      </if>
    </choose>
  </macro>
  <!-- si nouvelle édition -->
  <macro name="edition_original-date">
    <choose>
      <if variable="edition original-date" match="all">
        <text variable="edition" prefix=" [" suffix="]"/>
      </if>
    </choose>
  </macro>
  <macro name="bloc_titre-ouvrage-contribution-article">
    <choose>
      <!-- LIVRE / RAPPORT / THESE / MANUSCRIT / ARTICLE (monographie) -->
      <if type="book report thesis manuscript article" match="any">
        <text variable="title" font-style="italic"/>
        <number variable="volume" form="roman" text-case="uppercase" font-style="italic" prefix=". "/>
        <!-- Cas particulier : report / thesis -->
        <text macro="report-thesis_genre-num-pub"/>
        <!-- collection-title + collection-number -->
        <text macro="collection-title_collection-number"/>
        <!-- si nouvelle édition : -->
        <text macro="edition_original-date"/>
        <text variable="publisher-place" prefix=", "/>
      </if>
      <!-- CHAPITRE / ACTES (Contributions) -->
      <else-if type="chapter paper-conference" match="any">
        <text variable="title" quotes="true" suffix=", "/>
        <group delimiter="&#160;: " suffix="&#160;: ">
          <text term="in"/>
          <text macro="bloc_ed-dir"/>
        </group>
        <text variable="container-title" form="short" font-style="italic"/>
        <number variable="volume" form="roman" text-case="uppercase" font-style="italic" prefix=". "/>
        <!-- collection-title + collection-number -->
        <text macro="collection-title_collection-number"/>
        <!-- si nouvelle édition : -->
        <text macro="edition_original-date"/>
        <text variable="publisher-place" prefix=", "/>
      </else-if>
      <!-- ARTICLES DE PERIODIQUES -->
      <else-if type="article-journal article-newspaper article-magazine" match="any">
        <group suffix=", ">
          <text variable="title" quotes="true"/>
        </group>
        <text variable="container-title" form="short" font-style="italic"/>
        <text variable="volume" prefix=", "/>
        <text variable="issue" prefix="-"/>
      </else-if>
      <!-- SINON -->
      <else>
        <text variable="title" font-style="italic"/>
      </else>
    </choose>
    <text variable="page" prefix=", "/>
  </macro>
  <!-- Bloc en ligne -->
  <macro name="bloc_en-ligne">
    <choose>
      <if variable="accessed" match="any">
        <choose>
          <if variable="DOI">
            <text variable="DOI" prefix="DOI&#160;: "/>
          </if>
          <else>
            <text variable="URL" prefix="URL&#160;: "/>
          </else>
        </choose>
      </if>
    </choose>
  </macro>
  <!-- Bloc locator -->
  <macro name="bloc_locator">
    <group delimiter=" ">
      <choose>
        <if locator="page" match="none">
          <label variable="locator" form="short"/>
        </if>
        </choose>
      <text variable="locator"/>
    </group>
  </macro>
  <!-- DESCRIPTION DES NOTES ET REFERENCES BIBLIOGRAPHIQUES -->
  <citation disambiguate-add-year-suffix="true" cite-group-delimiter="&#160;; " et-al-min="3" et-al-use-first="1">
    <sort>
      <key macro="bloc_auteur"/>
      <key variable="issued"/>
      <key variable="volume"/>
      <key variable="page-first"/>
    </sort>
    <layout delimiter="&#160;; " suffix=".">
      <text macro="bloc_auteur_short"/>
      <text macro="bloc_date-publication_short"/>
      <text macro="bloc_locator" prefix=", "/>
    </layout>
  </citation>
  <bibliography>
    <sort>
      <key macro="bloc_auteur"/>
      <key variable="issued"/>
      <key variable="title"/>
      <key variable="volume"/>
      <key variable="page-first"/>
    </sort>
    <layout>
      <group suffix=".">
        <text macro="bloc_auteur"/>
        <text macro="bloc_date-publication"/>
        <text macro="bloc_titre-ouvrage-contribution-article" prefix="&#160;: "/>
      </group>
      <text macro="bloc_en-ligne" prefix=" "/>
    </layout>
  </bibliography>
</style>
