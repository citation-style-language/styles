  <!-- PARAMETRAGE LOCALE\TERMS -->
  <locale xml:lang="fr">
    <terms>
      <term name="open-quote">“</term>
      <term name="close-quote">”</term>
      <term name="open-inner-quote">‘</term>
      <term name="close-inner-quote">’</term>
    </terms>
  </locale>
  <locale xml:lang="en">
    <terms>
      <term name="editorial-director" form="short">dir.</term>
      <term name="open-quote">“</term>
      <term name="close-quote">”</term>
      <term name="open-inner-quote">‘</term>
      <term name="close-inner-quote">’</term>
    </terms>
  </locale>
  <locale xml:lang="es">
    <terms>
      <term name="editorial-director" form="short">dir.</term>
      <term name="open-quote">“</term>
      <term name="close-quote">”</term>
      <term name="open-inner-quote">‘</term>
      <term name="close-inner-quote">’</term>
    </terms>
  </locale>
  <locale xml:lang="de">
    <terms>
      <term name="editor" form="short">hrsg.</term>
      <term name="editorial-director" form="short">dir.</term>
      <term name="open-quote">“</term>
      <term name="close-quote">”</term>
