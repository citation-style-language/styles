  </info>
  <locale xml:lang="tr">
    <terms>
      <term name="accessed">Erişim Tarihi</term>
    </terms>
  </locale>
  <macro name="author">
    <names variable="author" font-weight="bold">
      <name delimiter-precedes-last="never" initialize-with=". " name-as-sort-order="all"/>
      <label form="short" prefix=", "/>
      <substitute>
        <names variable="editor"/>
        <names variable="translator"/>
      </substitute>
    </names>
  </macro>
  <macro name="editor">
    <names variable="editor">
      <name initialize-with="." delimiter=", " delimiter-precedes-last="always"/>
      <label form="short" text-case="capitalize-first" prefix=" (" suffix=")"/>
    </names>
  </macro>
  <macro name="year-date">
    <choose>
      <if variable="issued">
        <date date-parts="year" form="text" variable="issued" font-weight="normal"/>
      </if>
      <else>
        <text term="no date" form="short"/>
      </else>
    </choose>
  </macro>
  <macro name="publisher">
    <group delimiter=": ">
      <text variable="publisher-place"/>
      <text variable="publisher"/>
    </group>
  </macro>
  <macro name="edition">
    <choose>
      <if is-numeric="edition">
        <group delimiter=" ">
          <number variable="edition" form="ordinal"/>
          <text term="edition" form="short"/>
        </group>
      </if>
      <else>
        <text variable="edition"/>
      </else>
    </choose>
  </macro>
  <macro name="title">
    <choose>
      <if type="book thesis report" match="any">
        <text variable="title" font-style="italic"/>
      </if>
      <else>
        <text variable="title"/>
      </else>
    </choose>
    <choose>
      <if type="report" match="any">
        <group delimiter=" " prefix="(" suffix=")">
          <text term="report" text-case="capitalize-first"/>
          <label variable="number" form="short"/>
          <text variable="number"/>
        </group>
      </if>
      <else-if type="thesis" match="any">
        <text variable="genre" prefix=". (" suffix=")"/>
      </else-if>
      <else-if type="software" match="any">
        <text variable="genre" prefix=" [" suffix="]"/>
      </else-if>
    </choose>
  </macro>
  <citation collapse="citation-number">
    <sort>
      <key variable="citation-number"/>
    </sort>
    <layout prefix="[" suffix="]" delimiter=",">
      <text variable="citation-number"/>
    </layout>
  </citation>
  <bibliography second-field-align="flush" entry-spacing="0" hanging-indent="true">
    <layout suffix=".">
      <text variable="citation-number" prefix="[" suffix="]"/>
      <choose>
        <if type="webpage post post-weblog" match="none">
          <group delimiter=". ">
            <text macro="author"/>
            <text macro="year-date" font-weight="normal" prefix="(" suffix=")"/>
            <text macro="title"/>
          </group>
        </if>
      </choose>
      <choose>
        <if type="bill book graphic legal_case legislation motion_picture report song" match="any">
          <group delimiter=". " prefix=". ">
            <text macro="edition"/>
            <text variable="page"/>
            <text macro="publisher"/>
          </group>
        </if>
        <else-if type="chapter paper-conference" match="any">
          <group delimiter=". " prefix=". ">
            <group delimiter=", ">
              <group delimiter=" ">
                <text term="in" text-case="capitalize-first"/>
                <text macro="editor"/>
              </group>
              <text variable="container-title" text-case="title" font-style="italic"/>
              <text macro="edition"/>
              <group prefix="(" suffix=")">
                <label strip-periods="false" variable="page" form="short"/>
                <text variable="page"/>
              </group>
            </group>
            <text macro="publisher"/>
          </group>
        </else-if>
        <else-if type="patent">
          <group delimiter=", ">
            <text variable="number"/>
            <text variable="publisher-place" suffix=": "/>
            <text variable="original-publisher"/>
          </group>
        </else-if>
        <else-if type="thesis">
          <group delimiter=", " prefix=". ">
            <text variable="publisher"/>
            <text variable="publisher-place"/>
          </group>
        </else-if>
        <else-if type="webpage post-weblog post" match="any">
          <group delimiter=", ">
            <group>
              <text value="URL" font-weight="bold" prefix=" " suffix="- "/>
              <text variable="URL" font-style="italic" prefix="&lt;" suffix="&gt;"/>
            </group>
            <group delimiter=" ">
              <text term="accessed" text-case="capitalize-first" suffix=" "/>
              <date form="numeric" variable="accessed"/>
            </group>
          </group>
        </else-if>
        <else>
          <group delimiter=", " prefix=", ">
            <text variable="container-title" text-case="title" font-style="italic"/>
            <group delimiter=", ">
              <group delimiter=" ">
                <text variable="volume" font-style="italic"/>
                <text variable="issue" prefix="(" suffix=")"/>
              </group>
              <text variable="page" form="short"/>
            </group>
          </group>
        </else>
      </choose>
    </layout>
  </bibliography>
</style>
