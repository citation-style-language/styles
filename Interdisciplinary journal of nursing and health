<?xml version="1.0" encoding="utf-8"?>
<style xmlns="http://purl.org/net/xbiblio/csl"
       version="1.0.1"
       class="in-text"
       default-locale="en-US"
       page-range-format="expanded"
       demote-non-dropping-particle="never">

  <info>
    <title>Interdisciplinary Journal of Nursing and Health (APA 7th edition based)</title>
    <title-short>IJNH-APA7</title-short>
    <id>https://www.i-editore.it/styles/ijnh-apa7</id>
    <link href="https://www.i-editore.it/styles/ijnh-apa7" rel="self"/>
    <link href="http://www.zotero.org/styles/apa" rel="template"/>
    <author>
      <name>Interdisciplinary Journal of Nursing and Health â€“ Editorial Board</name>
      <email>ijnh@ieditore.com</email>
    </author>
    <category citation-format="author-date"/>
    <category field="nursing"/>
    <summary>Interdisciplinary Journal of Nursing and Health style based on APA 7th edition, with mandatory DOI (when present) and italic journal titles.</summary>
    <updated>2025-12-01T00:00:00+00:00</updated>
    <rights license="http://creativecommons.org/licenses/by-sa/3.0/">
      This work is licensed under a Creative Commons Attribution-ShareAlike 3.0 License.
    </rights>
  </info>

  <locale xml:lang="en">
    <terms>
      <term name="editor" form="short">ed.</term>
      <term name="editor" form="short" plural="true">eds.</term>
      <term name="page" form="short">p.</term>
      <term name="page" form="short" plural="true">pp.</term>
      <term name="and">and</term>
      <term name="et-al">et al.</term>
      <term name="no date">n.d.</term>
    </terms>
  </locale>

  <macro name="author">
    <names variable="author">
      <name and="symbol"
            name-as-sort-order="last"
            sort-separator=", "
            delimiter=", "
            delimiter-precedes-last="always"
            initialize-with=". "/>
      <label form="short" prefix=" (" suffix=")" strip-periods="true"/>
      <substitute>
        <names variable="editor"/>
        <names variable="translator"/>
        <text variable="title"/>
      </substitute>
    </names>
  </macro>

  <macro name="author-short">
    <names variable="author">
      <name form="short"
            and="symbol"
            delimiter=", "
            delimiter-precedes-last="always"/>
      <substitute>
        <names variable="editor"/>
        <names variable="translator"/>
        <text variable="title" form="short" font-style="italic"/>
      </substitute>
    </names>
  </macro>

  <macro name="issued">
    <choose>
      <if variable="issued">
        <date variable="issued">
          <date-part name="year"/>
        </date>
      </if>
      <else>
        <text term="no date"/>
      </else>
    </choose>
  </macro>

  <macro name="issued-full">
    <choose>
      <if variable="issued">
        <date variable="issued">
          <date-part name="year"/>
        </date>
      </if>
      <else>
        <text term="no date"/>
      </else>
    </choose>
  </macro>

  <macro name="title">
    <choose>
      <if type="book chapter paper-conference report" match="any">
        <text variable="title" font-style="italic"/>
      </if>
      <else-if type="webpage post post-weblog" match="any">
        <text variable="title" font-style="italic"/>
      </else-if>
      <else>
        <text variable="title"/>
      </else>
    </choose>
  </macro>

  <macro name="container-title">
    <!-- Nome rivista in corsivo -->
    <text variable="container-title" font-style="italic"/>
  </macro>

  <macro name="volume-issue-pages">
    <group delimiter=", ">
      <group>
        <text variable="volume" font-style="italic"/>
        <text variable="issue" prefix="(" suffix=")"/>
      </group>
      <text variable="page"/>
    </group>
  </macro>

  <!-- DOI obbligatorio se presente, altrimenti URL -->
  <macro name="doi-or-url">
    <choose>
      <if variable="DOI">
        <group>
          <text value="https://doi.org/"/>
          <text variable="DOI"/>
        </group>
      </if>
      <else-if variable="URL">
        <text variable="URL"/>
      </else-if>
    </choose>
  </macro>

  <macro name="publisher">
    <group delimiter=", ">
      <text variable="publisher"/>
      <text variable="publisher-place"/>
    </group>
  </macro>

  <!-- Citazioni nel testo: autore-data -->
  <citation collapse="year"
            disambiguate-add-givenname="true"
            disambiguate-add-year-suffix="true"
            cite-group-delimiter="; ">
    <sort>
      <key macro="author-short"/>
      <key macro="issued"/>
    </sort>
    <layout prefix="(" suffix=")" delimiter="; ">
      <group delimiter=", ">
        <text macro="author-short"/>
        <text macro="issued"/>
        <text variable="locator" prefix=", "/>
      </group>
    </layout>
  </citation>

  <!-- Bibliografia -->
  <bibliography hanging-indent="true"
                line-spacing="1"
                entry-spacing="0"
                delimiter-precedes-last="always">
    <sort>
      <key macro="author"/>
      <key macro="issued"/>
      <key variable="title"/>
    </sort>
    <layout>
      <group delimiter=". ">
        <!-- Autori -->
        <text macro="author"/>

        <!-- Anno -->
        <group prefix=" (" suffix=").">
          <text macro="issued-full"/>
        </group>

        <!-- Titolo -->
        <text macro="title"/>

        <!-- Formati specifici per tipo -->
        <choose>
          <!-- Articolo di rivista -->
          <if type="article-journal article-magazine" match="any">
            <group delimiter=", ">
              <text macro="container-title"/>
              <text macro="volume-issue-pages"/>
            </group>
            <text macro="doi-or-url" prefix=". "/>
          </if>

          <!-- Libro -->
          <else-if type="book" match="any">
            <group>
              <text variable="number-of-volumes" prefix=" (" suffix=" vols.)"/>
            </group>
            <group delimiter=". ">
              <group>
                <text variable="edition" suffix=" ed."/>
              </group>
              <text macro="publisher"/>
            </group>
            <text macro="doi-or-url" prefix=". "/>
          </else-if>

          <!-- Capitolo di libro / paper in atti -->
          <else-if type="chapter paper-conference" match="any">
            <group delimiter=". ">
              <group delimiter=", ">
                <text term="in" text-case="capitalize-first" suffix=" "/>
                <names variable="editor">
                  <name and="symbol" delimiter=", " initialize-with=". "/>
                  <label form="short" prefix=" (" suffix=")" strip-periods="true"/>
                </names>
                <text variable="container-title" font-style="italic"/>
                <text variable="page" prefix=" (pp. " suffix=")"/>
              </group>
              <text macro="publisher"/>
            </group>
            <text macro="doi-or-url" prefix=". "/>
          </else-if>

          <!-- Sito web / post -->
          <else-if type="webpage post post-weblog" match="any">
            <text macro="doi-or-url" prefix=". "/>
          </else-if>

          <!-- Default -->
          <else>
            <text macro="doi-or-url" prefix=". "/>
          </else>
        </choose>

      </group>
      <text value="."/>
    </layout>
  </bibliography>

</style>
