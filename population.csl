<?xml version="1.0" encoding="utf-8"?>
<style xmlns="http://purl.org/net/xbiblio/csl" class="in-text" version="1.0" demote-non-dropping-particle="never" page-range-format="expanded">
  <!-- Polyglot; journal publishes in English, and French -->
  <info>
    <title>Population</title>
    <id>http://www.zotero.org/styles/population</id>
    <link href="http://www.zotero.org/styles/population" rel="self"/>
    <link href="http://www.zotero.org/styles/apa-6th-edition" rel="template"/>
    <link href="https://www.revue-population.fr/pour-les_auteur%c2%b7es/consignes_aux_auteurs/" rel="documentation"/>
    <link href="https://www.journal-population.com/submission-guidelines/" rel="documentation"/>
    <author>
      <name>Valérie Lanier</name>
      <email>valerie.lanier@ined.fr</email>
    </author>
    <category citation-format="author-date"/>
    <category field="social_science"/>
    <category field="sociology"/>
    <category field="humanities"/>
    <issn>0032-4663</issn>
    <eissn>1957-7966</eissn>
    <summary>Bibliographic style of the journal Population published by the French Institute for Demographic Studies (INED)</summary>
    <published>2025-12-08T14:40:00+01:00</published>
    <updated>2025-12-18T08:52:21+00:00</updated>
