<?xml version="1.0" encoding="utf-8"?>
<style class="note" version="1.0" and="text" demote-non-dropping-particle="never" default-locale="fr-FR" xmlns="http://purl.org/net/xbiblio/csl">
  <info>
    <title>JurisThèse - Thème Droit</title>
    <title-short>juristhese</title-short>
    <id>http://www.zotero.org/styles/juristhese</id>
    <link href="http://www.zotero.org/styles/juristhese-theme-droit" rel="self">Juristhèse Thème</link>
    <link href="https://gitlab.dsi.universite-paris-saclay.fr/celian.godefroid/zot-juristhese-fr" rel="documentation"/>
    <author>
      <name>Célian Godefroid</name>
      <email>celian.godefroid@universite-paris-saclay.fr</email>
    </author>
