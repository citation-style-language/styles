<?xml version="1.0" encoding="utf-8"?>
<style xmlns="http://purl.org/net/xbiblio/csl" class="in-text" version="1.0" delimiter-precedes-et-al="always" delimiter-precedes-last="always" name-as-sort-order="all" demote-non-dropping-particle="never" default-locale="en-GB">
  <info>
    <title>Acta Geographica Slovenica</title>
    <id>http://www.zotero.org/styles/acta-geographica-slovenica</id>
    <link href="http://www.zotero.org/styles/acta-geographica-slovenica" rel="self"/>
    <link href="http://www.zotero.org/styles/acta-geographica-slovenica" rel="template"/>
    <link href="https://ojs.zrc-sazu.si/ags/about/submissions" rel="documentation"/>
    <author>
      <name>Rok Ciglic</name>
      <email>rok.ciglic@zrc-sazu.si</email>
      <uri>https://giam.zrc-sazu.si/ciglic</uri>
    </author>
    <category citation-format="author-date"/>
    <category field="geography"/>
    <issn>1581-6613</issn>
    <updated>2025-08-27T09:12:37+00:00</updated>
    <rights license="http://creativecommons.org/licenses/by-sa/3.0/">This work is licensed under a Creative Commons Attribution-ShareAlike 3.0 License</rights>
  </info>
  <macro name="author">
    <names variable="author">
      <name delimiter-precedes-last="always" et-al-min="8" et-al-use-first="7" initialize-with=". " name-as-sort-order="all"/>
      <label form="short" text-case="lowercase" prefix=" (" suffix=")"/>
      <substitute>
        <names variable="editor translator"/>
        <text variable="title"/>
      </substitute>
    </names>
  </macro>
  <macro name="year">
    <choose>
      <if variable="issued">
        <date date-parts="year" form="numeric" variable="issued">
          <date-part name="year"/>
        </date>
      </if>
      <else>
        <text term="no date"/>
      </else>
    </choose>
  </macro>
  <macro name="title">
    <text variable="title"/>
    <choose>
      <if type="map">
        <text variable="publisher-place" prefix=" (" suffix=")"/>
      </if>
    </choose>
  </macro>
  <macro name="container">
    <choose>
      <if type="chapter paper-conference entry-encyclopedia" match="any">
        <group delimiter=". " prefix="In: " suffix=". ">
          <text variable="container-title" font-style="normal"/>
          <group delimiter=" ">
            <text variable="collection-title" text-case="title" font-style="italic"/>
            <text variable="volume"/>
            <text variable="issue" prefix="-"/>
          </group>
        </group>
      </if>
      <else-if type="book report" match="any">
        <text variable="collection-title" font-style="italic" suffix=". "/>
      </else-if>
      <else-if type="webpage post post-weblog" match="any">
        <text variable="container-title" suffix=". "/>
      </else-if>
      <else>
        <group suffix=". ">
          <text variable="container-title" font-style="italic" suffix=" "/>
          <text variable="collection-title"/>
          <text variable="volume"/>
          <text variable="issue" prefix="-"/>
        </group>
      </else>
    </choose>
  </macro>
  <macro name="doi">
    <choose>
      <if variable="DOI">
        <text variable="DOI" prefix="https://doi.org/"/>
      </if>
      <else-if type="webpage post post-weblog" match="any">
        <group delimiter=" ">
          <text variable="URL"/>
          <group prefix="(" suffix=").">
            <date variable="accessed">
              <date-part name="month" suffix=" "/>
              <date-part name="day" form="ordinal" suffix=", "/>
              <date-part name="year"/>
            </date>
          </group>
        </group>
      </else-if>
    </choose>
  </macro>
  <macro name="locators">
    <choose>
      <if type="book paper-conference chapter report" match="any">
        <text variable="publisher"/>
      </if>
      <else-if type="map" match="any">
        <text variable="scale" font-style="italic" suffix=" map"/>
      </else-if>
      <else-if type="thesis report document" match="any">
        <group delimiter=" " suffix=". ">
          <text variable="genre" text-case="capitalize-first"/>
          <text variable="number"/>
        </group>
        <group>
          <text variable="publisher"/>
        </group>
      </else-if>
      <else>
        <text variable="genre" text-case="capitalize-first" suffix="."/>
      </else>
    </choose>
  </macro>
  <macro name="author-short">
    <names variable="author">
      <name form="short" and="text" et-al-min="3" et-al-use-first="1" initialize-with=". "/>
      <substitute>
        <names variable="editor"/>
        <choose>
          <if type="book report" match="any">
            <text variable="title" form="short" font-style="italic"/>
          </if>
          <else-if type="webpage" match="any">
            <text variable="container-title"/>
          </else-if>
          <else-if type="dataset" match="any">
            <text variable="publisher"/>
          </else-if>
          <else>
            <text variable="original-publisher" form="short" quotes="false"/>
          </else>
        </choose>
      </substitute>
    </names>
  </macro>
  <citation delimiter-precedes-et-al="never" delimiter-precedes-last="never" et-al-min="3" et-al-use-first="1" disambiguate-add-givenname="true" disambiguate-add-year-suffix="true">
    <sort>
      <key macro="author"/>
    </sort>
    <layout prefix="(" suffix=")" delimiter="; ">
      <group delimiter=" ">
        <text macro="author-short"/>
        <text macro="year"/>
      </group>
    </layout>
  </citation>
  <bibliography et-al-min="8" et-al-use-first="7" entry-spacing="2">
    <sort>
      <key macro="author"/>
    </sort>
    <layout>
      <text macro="author" suffix=" "/>
      <text macro="year" prefix=" " suffix=": "/>
      <text macro="title" suffix=". "/>
      <text macro="container"/>
      <text macro="locators" suffix=". "/>
      <text macro="doi"/>
    </layout>
  </bibliography>
</style>
