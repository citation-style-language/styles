    <author>
      <name>Coordinación de Revistas</name>
      <email>revistas.iij@unam.mx</email>
    </author>
    <category citation-format="note"/>
    <category field="law"/>
    <category field="political_science"/>
    <summary>Instituto de Investigaciones Juridicas de la UNAM</summary>
