  <locale xml:lang="es">
    <date form="text">
      <date-part name="year" suffix="."/>
    </date>
    <terms>
      <term name="chapter" form="short">cap. </term>
      <term name="paragraph" form="short">pár.</term>
    </terms>
  </locale>
  <macro name="nombres">
    <choose>
      <if variable="author">
        <names variable="author" delimiter=", ">
          <name form="long" name-as-sort-order="all" delimiter=", " and="text" sort-separator=", " delimiter-precedes-last="never"/>
        </names>
      </if>
      <else-if variable="editor">
        <names variable="editor" delimiter=", ">
          <name form="long" name-as-sort-order="all" delimiter=", " and="text" sort-separator=", " delimiter-precedes-last="never"/>
        </names>
        <text term="editor" form="short" prefix=" (" suffix=")"/>
      </else-if>
      <else-if variable="director">
        <names variable="director" delimiter=", ">
          <name form="long" name-as-sort-order="all" delimiter=", " and="text" sort-separator=", " delimiter-precedes-last="never"/>
        </names>
        <text term="director" form="short" prefix=" (" suffix=")"/>
      </else-if>
      <else-if variable="compiler">
        <names variable="compiler" delimiter=", ">
          <name form="long" name-as-sort-order="all" delimiter=", " and="text" sort-separator=", " delimiter-precedes-last="never"/>
        </names>
        <text term="compiler" form="short" prefix=" (" suffix=")"/>
      </else-if>
      <else-if variable="container-author">
        <names variable="container-author" delimiter=", ">
          <name form="long" name-as-sort-order="all" and="text"/>
        </names>
      </else-if>
    </choose>
  </macro>
  <macro name="anio">
    <date variable="issued">
      <date-part name="year"/>
    </date>
  </macro>
  <macro name="titulo">
    <choose>
      <if type="book graphic motion_picture" variable="medium" match="any">
        <text variable="title" font-style="italic"/>
      </if>
      <else-if type="article-journal article-newspaper">
        <text variable="title" quotes="true"/>
      </else-if>
      <else>
        <text variable="title" font-style="normal"/>
      </else>
    </choose>
  </macro>
  <macro name="point-locator">
    <group delimiter=" ">
      <label variable="locator" form="short"/>
      <text variable="locator"/>
    </group>
  </macro>
  <macro name="consultado">
    <group prefix="(" suffix=")">
      <text value="fecha de consulta: "/>
      <date variable="accessed">
        <date-part name="day" form="numeric" suffix=""/>
        <date-part name="month" form="long" suffix=" de "/>
        <date-part name="year"/>
      </date>
    </group>
  </macro>
  <macro name="publicadores">
    <group delimiter="; ">
      <text variable="publisher"/>
    </group>
  </macro>
  <macro name="datos">
    <choose>
      <if type="article-journal article-newspaper" match="any">
        <group delimiter=", ">
          <text variable="container-title" font-style="italic"/>
          <text variable="publisher-place" font-style="normal"/>
          <text macro="publicadores"/>
          <text variable="volume" font-style="normal" prefix="vol. "/>
          <text variable="issue" font-style="normal" prefix=" no. "/>
          <text macro="anio"/>
          <text macro="point-locator"/>
        </group>
        <text variable="URL" prefix=". "/>
      </if>
      <else-if variable="medium" match="any">
        <group delimiter=", ">
          <text variable="publisher-place" font-style="normal"/>
          <text macro="publicadores" font-style="normal"/>
          <text macro="anio"/>
          <text variable="chapter-number" form="short" prefix="cap. "/>
          <text macro="point-locator"/>
          <text variable="medium" suffix=" edition."/>
        </group>
      </else-if>
      <else>
        <group delimiter=", ">
          <text variable="publisher-place"/>
          <text macro="publicadores"/>
        </group>
      </else>
    </choose>
  </macro>
  <citation>
    <sort>
      <key macro="nombres" names-min="3" names-use-first="3"/>
      <key variable="issued" sort="descending"/>
    </sort>
    <layout>
      <text variable="citation-number" font-style="normal" prefix="[" suffix="]"/>
      <choose>
        <if type="book" match="any">
          <group delimiter=", ">
            <text macro="nombres"/>
            <text macro="titulo"/>
            <text macro="datos"/>
            <text variable="number-of-pages" prefix="p. " suffix="."/>
            <group>
              <label variable="page" form="short"/>
              <text variable="page" prefix=" " suffix="."/>
            </group>
            <text variable="URL" suffix=" "/>
            <text macro="consultado"/>
          </group>
        </if>
        <else-if variable="medium" match="any">
          <group delimiter=", " suffix=".">
            <text macro="nombres"/>
            <text macro="titulo" font-style="italic"/>
            <text macro="datos"/>
          </group>
        </else-if>
        <else-if type="article-journal article-newspaper" match="any">
          <group delimiter=", ">
            <text macro="nombres"/>
            <text macro="titulo"/>
            <text macro="datos"/>
          </group>
        </else-if>
      </choose>
    </layout>
  </citation>
  <bibliography entry-spacing="0" hanging-indent="true" line-spacing="2">
    <sort>
      <key macro="nombres" names-min="3" names-use-first="3"/>
      <key variable="issued" sort="descending"/>
    </sort>
    <layout>
      <text variable="citation-number" font-style="normal" prefix="[" suffix="]"/>
      <choose>
        <if type="book" match="any">
          <group delimiter=", " suffix=".">
            <text macro="nombres"/>
            <text macro="titulo"/>
            <text macro="datos"/>
            <choose>
              <if variable="DOI">
                <text variable="DOI" suffix=" "/>
              </if>
              <else-if variable="URL">
                <text variable="URL" suffix=" "/>
              </else-if>
            </choose>
            <text macro="consultado"/>
          </group>
        </if>
        <else-if variable="medium" match="any">
          <group delimiter=", " suffix=".">
            <text macro="nombres"/>
            <text macro="titulo" font-style="italic"/>
            <text macro="datos"/>
          </group>
        </else-if>
        <else-if type="article-journal article-newspaper" match="any">
          <group delimiter=", ">
            <text macro="nombres"/>
            <text macro="titulo"/>
            <text macro="datos"/>
          </group>
        </else-if>
      </choose>
    </layout>
  </bibliography>
</style>
