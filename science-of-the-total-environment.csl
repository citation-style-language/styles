<?xml version="1.0" encoding="utf-8"?>
<style xmlns="http://purl.org/net/xbiblio/csl" class="in-text" version="1.0" page-range-format="minimal" demote-non-dropping-particle="sort-only" default-locale="en-US">
  <info>
    <title>Science of the Total Environment</title>
    <id>http://www.zotero.org/styles/science-of-the-total-environment</id>
    <link href="http://www.zotero.org/styles/science-of-the-total-environment" rel="self"/>
    <author>
      <name>Keith Kranker</name>
      <uri>http://www.zotero.org/kkranker/11431</uri>
    </author>
    <category citation-format="author-date"/>
    <category field="science"/>
    <issn>0048-9697</issn>
    <updated>2011-07-19T21:01:02+00:00</updated>
