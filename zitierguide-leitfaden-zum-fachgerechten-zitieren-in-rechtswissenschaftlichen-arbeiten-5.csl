  </info>
  <locale xml:lang="de">
    <terms>
      <term name="accessed">besucht am: </term>
      <term name="editor">Hrsg.</term>
      <term name="et-al">et al.</term>
    </terms>
  </locale>
  <macro name="author">
    <names variable="author">
      <name font-style="normal" font-variant="small-caps" delimiter="/" et-al-min="5" et-al-use-first="1" name-as-sort-order="all" sort-separator=" "/>
      <et-al font-variant="normal"/>
      <substitute>
        <names variable="editor" suffix=" (Hrsg.)">
          <name delimiter="/" et-al-min="5" et-al-use-first="1" name-as-sort-order="all" sort-separator=" "/>
          <et-al font-variant="normal"/>
        </names>
      </substitute>
    </names>
  </macro>
  <macro name="author-inline-citation">
    <names variable="author">
      <name font-style="normal" font-variant="small-caps" delimiter="/" et-al-min="5" et-al-use-first="1" sort-separator=" "/>
      <et-al font-variant="normal"/>
      <substitute>
        <names variable="editor" suffix=" (Hrsg.)">
          <name delimiter="/" et-al-min="5" et-al-use-first="1" name-as-sort-order="all" sort-separator=" "/>
          <et-al font-variant="normal"/>
        </names>
      </substitute>
    </names>
  </macro>
  <citation name-form="short" initialize-with="." disambiguate-add-givenname="true">
    <sort>
      <key variable="author"/>
    </sort>
    <layout suffix="." delimiter="; ">
      <text macro="author-inline-citation"/>
      <choose>
        <if match="any" disambiguate="true">
          <text variable="note" prefix=", "/>
        </if>
      </choose>
    </layout>
  </citation>
  <bibliography subsequent-author-substitute-rule="complete-each">
    <sort>
      <key macro="author"/>
      <key variable="issued"/>
    </sort>
    <layout>
      <choose>
        <if type="legislation bill legal_case" match="any">
          <group>
            <text variable="title" font-style="normal"/>
            <date prefix=" vom " form="text" variable="issued"/>
            <text prefix=" (" suffix=")" variable="title-short"/>
          </group>
          <text prefix=", " variable="number"/>
        </if>
        <else>
          <group suffix=".">
            <choose>
              <if type="article-journal">
                <group delimiter=", ">
                  <text macro="author"/>
                  <text variable="title"/>
                  <group delimiter=" ">
                    <choose>
                      <if variable="title-short" match="any">
                        <text form="short" variable="title-short"/>
                      </if>
                      <else>
                        <text form="short" suffix=" " variable="container-title"/>
                      </else>
                    </choose>
                    <group delimiter="">
                      <date date-parts="year" form="text" variable="issued"/>
                      <choose>
                        <if match="any" variable="note">
                          <text variable="page-first" prefix=" S. " suffix=" ff."/>
                          <text variable="note" prefix=" (zit. " suffix=")"/>
                        </if>
                        <else>
                          <text variable="page-first" prefix=" S. " suffix=" ff"/>
                        </else>
                      </choose>
                    </group>
                  </group>
                </group>
              </if>
              <else-if type="chapter">
                <group delimiter=", ">
                  <text macro="author"/>
                  <text variable="title"/>
                  <group delimiter=": ">
                    <text term="in"/>
                    <group delimiter=", ">
                      <names variable="editor">
                        <name sort-separator=" " name-as-sort-order="all" delimiter="/"/>
                        <label prefix=" (" form="short" suffix=")"/>
                      </names>
                      <text variable="container-title"/>
                    </group>
                  </group>
                  <text variable="volume"/>
                  <text variable="edition" suffix=". Aufl."/>
                  <group delimiter=" ">
                    <text variable="publisher-place"/>
                    <date form="text" variable="issued" date-parts="year"/>
                  </group>
                  <group delimiter=" ">
                    <choose>
                      <if match="any" variable="note">
                        <text variable="page-first" prefix=" S. " suffix=" ff."/>
                        <text variable="note" prefix="(zit. " suffix=")"/>
                      </if>
                      <else>
                        <text variable="page-first" form="short" prefix=" S. " suffix=" ff"/>
                      </else>
                    </choose>
                  </group>
                </group>
              </else-if>
              <else-if type="thesis">
                <group delimiter=", ">
                  <text macro="author"/>
                  <text variable="title"/>
                  <group delimiter=" ">
                    <text variable="genre"/>
                    <text variable="publisher"/>
                  </group>
                  <group delimiter=" ">
                    <text variable="publisher-place"/>
                    <date form="text" variable="issued" date-parts="year"/>
                    <text variable="note" prefix="(zit. " suffix=")"/>
                  </group>
                </group>
              </else-if>
              <else-if type="article-newspaper article-magazine" match="any">
                <group delimiter=", ">
                  <text macro="author"/>
                  <text variable="title"/>
                  <group delimiter=" ">
                    <text variable="container-title"/>
                    <date form="text" variable="issued" prefix="vom "/>
                  </group>
                  <text variable="issue"/>
                  <choose>
                    <if match="any" is-numeric="page">
                      <text variable="page-first" prefix=" S. "/>
                    </if>
                    <else>
                      <text variable="page-first" prefix=" S. " suffix=" ff"/>
                    </else>
                  </choose>
                </group>
              </else-if>
              <else-if type="webpage" match="any">
                <group delimiter=", ">
                  <text macro="author"/>
                  <text variable="title"/>
                  <group delimiter=" ">
                    <text variable="abstract"/>
                    <text variable="note" prefix="(zit. " suffix=")"/>
                  </group>
                </group>
              </else-if>
              <else-if type="post-weblog" match="any">
                <group delimiter=", ">
                  <text macro="author"/>
                  <text variable="title"/>
                  <group delimiter=" ">
                    <text variable="container-title"/>
                    <date form="text" date-parts="year-month-day" variable="issued"/>
                    <text variable="note" prefix="(zit. " suffix=")"/>
                  </group>
                </group>
              </else-if>
              <else>
                <group delimiter=", ">
                  <text macro="author"/>
                  <text variable="title"/>
                  <text variable="volume"/>
                  <text variable="edition" suffix=". Aufl."/>
                  <group delimiter=" ">
                    <text variable="publisher-place"/>
                    <date form="text" variable="issued" date-parts="year"/>
                    <text variable="note" prefix="(zit. " suffix=")"/>
                  </group>
                </group>
              </else>
            </choose>
          </group>
        </else>
      </choose>
    </layout>
  </bibliography>
</style>
