<style xmlns="http://purl.org/net/xbiblio/csl" class="in-text" version="1.0">
  <info>
    <title>Journal of Bacteriology</title>
    <id>http://www.zotero.org/styles/journal-of-bacteriology</id>
    <link href="http://www.zotero.org/styles/journal-of-bacteriology" rel="self"/>
    <link href="http://www.zotero.org/styles/american-society-for-microbiology" rel="template"/>
    <link href="http://jb.asm.org/site/misc/journal-ita_org.xhtml#02" rel="documentation"/>
