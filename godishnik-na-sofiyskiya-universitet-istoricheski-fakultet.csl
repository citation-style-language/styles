<style xmlns="http://purl.org/net/xbiblio/csl" class="note" version="1.0" et-al-min="6" et-al-use-first="5" et-al-subsequent-min="6" et-al-subsequent-use-first="5" demote-non-dropping-particle="never" default-locale="bg-BG">
