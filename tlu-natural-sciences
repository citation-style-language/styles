<?xml version="1.0" encoding="utf-8"?>
<style xmlns="http://purl.org/net/xbiblio/csl" class="in-text" version="1.0" demote-non-dropping-particle="sort-only" default-locale="en-GB">
  <info>
    <title>Tallinn University - Natural Sciences</title>
    <id>http://www.zotero.org/styles/tallinn-university-natural-sciences</id>
    <link rel="self" href="http://www.zotero.org/styles/tallinn-university-natural-sciences"/>
    <author>
      <name>Ilja Å morgun</name>
      <email>ilja.smorgun@tlu.ee</email>
    </author>
    <category citation-format="author-date"/>
    <category field="generic-base"/>
    <summary>The Harvard author-date style</summary>
    <updated>2018-01-22T12:05:49+00:00</updated>
    <rights license="http://creativecommons.org/licenses/by-sa/3.0/">This work is licensed under a Creative Commons Attribution-ShareAlike 3.0 License</rights>
  </info>
  <macro name="editor">
    <names variable="editor" delimiter=", ">
      <name and="symbol" initialize-with=". " delimiter=", "/>
      <label form="short" prefix=", "/>
    </names>
  </macro>
  <macro name="anon">
    <text term="anonymous" form="short" text-case="capitalize-all" strip-periods="true"/>
  </macro>
  <macro name="author">
    <names variable="author">
      <name and="text" delimiter-precedes-last="never" initialize-with="." name-as-sort-order="all"/>
      <label form="short" text-case="capitalize-all" prefix=" (" suffix=")."/>
      <substitute>
        <names variable="editor"/>
        <text macro="anon"/>
      </substitute>
    </names>
  </macro>
  <macro name="anon-bib-list">
    <text term="anonymous" form="short" text-case="uppercase" strip-periods="true"/>
  </macro>
  <macro name="author-bib-list">
    <names variable="author">
      <name and="text" delimiter-precedes-last="never" text-case="uppercase" initialize-with="." name-as-sort-order="all"/>
      <label form="short" prefix=" (" suffix=")."/>
      <substitute>
        <names variable="editor"/>
        <text macro="anon-bib-list"/>
      </substitute>
    </names>
  </macro>
  <macro name="author-short">
    <names variable="author">
      <name form="short" and="text" delimiter-precedes-last="never" initialize-with="."/>
      <substitute>
        <names variable="editor"/>
        <names variable="translator"/>
        <text macro="anon"/>
      </substitute>
    </names>
  </macro>
  <macro name="access">
    <choose>
      <if variable="URL">
        <text term="online" text-case="capitalize-first" prefix="[" suffix="] "/>
        <text value="Available from:" suffix=" "/>
        <text variable="URL"/>
        <group prefix=" [" suffix="]">
          <text term="accessed" text-case="capitalize-first" suffix=" "/>
          <date variable="accessed">
            <date-part name="day" suffix=" "/>
            <date-part name="month" form="short" suffix=" "/>
            <date-part name="year"/>
          </date>
        </group>
      </if>
    </choose>
  </macro>
  <macro name="title">
    <choose>
      <if type="bill book graphic legal_case legislation motion_picture report song" match="any">
        <text variable="title" font-style="italic"/>
      </if>
      <else>
        <text variable="title"/>
      </else>
    </choose>
  </macro>
  <macro name="publisher">
    <group delimiter=": ">
      <text variable="publisher-place"/>
      <text variable="publisher"/>
    </group>
  </macro>
  <macro name="year-date">
    <group>
      <choose>
        <if variable="issued">
          <date variable="issued">
            <date-part name="year"/>
          </date>
        </if>
        <else>
          <text term="no date" form="short"/>
        </else>
      </choose>
    </group>
  </macro>
  <macro name="edition">
    <choose>
      <if is-numeric="edition">
        <group delimiter=" ">
          <number variable="edition" form="ordinal"/>
          <text term="edition" form="short"/>
        </group>
      </if>
      <else>
        <text variable="edition" suffix="."/>
      </else>
    </choose>
  </macro>
  <citation et-al-min="3" et-al-use-first="1" disambiguate-add-year-suffix="true" disambiguate-add-names="true" disambiguate-add-givenname="true">
    <layout prefix="(" suffix=")" delimiter="; ">
      <group delimiter=" ">
        <group delimiter=", ">
          <text macro="author-short"/>
          <text macro="year-date"/>
        </group>
        <group>
          <label variable="locator" form="short"/>
          <text variable="locator" prefix=" "/>
        </group>
      </group>
    </layout>
  </citation>
  <bibliography hanging-indent="true">
    <sort>
      <key macro="author-bib-list"/>
      <key variable="title"/>
    </sort>
    <layout>
      <group delimiter=" " suffix=".">
        <text macro="author-bib-list"/>
        <text macro="year-date"/>
      </group>
      <choose>
        <if type="bill graphic legal_case legislation motion_picture report song" match="any">
          <group prefix=" " delimiter=" " suffix=".">
            <text macro="title"/>
            <choose>
              <if match="any" variable="URL">
                <text term="online" text-case="capitalize-first" prefix="[" suffix="]"/>
              </if>
            </choose>
            <text macro="edition"/>
            <text macro="editor" prefix="(" suffix=")"/>
          </group>
          <text prefix=" " suffix="." macro="publisher"/>
        </if>
        <else-if type="book" match="any">
          <text macro="title" prefix=" "/>
          <group prefix=". ">
            <names variable="editor" delimiter=", " prefix=" " suffix=".">
              <name and="text" delimiter-precedes-last="never" initialize-with=". "/>
              <label form="short" strip-periods="false" prefix=", "/>
            </names>
            <group prefix=" " suffix="." delimiter=" ">
              <text variable="container-title"/>
              <choose>
                <if match="any" variable="URL">
                  <text term="online" text-case="capitalize-first" prefix="[" suffix="]"/>
                </if>
              </choose>
            </group>
            <text variable="collection-title" prefix=" " suffix="."/>
            <group suffix=".">
              <text macro="publisher" prefix=" "/>
              <group prefix=", ">
				<label variable="page" form="short" suffix=" "/>
                <text variable="page"/>
              </group>
            </group>
          </group>
        </else-if>
        <else-if type="chapter" match="any">
          <text macro="title" prefix=" "/>
          <group prefix=" ">
            <text term="in" text-case="capitalize-first" font-style="italic" suffix=":"/>
            <names variable="editor" delimiter=", " prefix=" " suffix=".">
              <name and="text" delimiter-precedes-last="never" initialize-with=". "/>
              <label form="short" strip-periods="false" prefix=", "/>
            </names>
            <group prefix=" " suffix="." delimiter=" ">
              <text variable="container-title" font-style="italic"/>
              <choose>
                <if match="any" variable="URL">
                  <text term="online" text-case="capitalize-first" prefix="[" suffix="]"/>
                </if>
              </choose>
            </group>
            <text variable="collection-title" prefix=" " suffix="."/>
            <group suffix=".">
              <text macro="publisher" prefix=" "/>
              <group prefix=", ">
                <label variable="page" form="short" suffix=" "/>
                <text variable="page"/>
              </group>
            </group>
          </group>
        </else-if>
        <else-if type="paper-conference" match="any">
          <text macro="title" prefix=" "/>
          <group prefix=". ">
            <text term="in" text-case="capitalize-first" font-style="italic" suffix=":"/>
            <names variable="editor" delimiter=", " prefix=" " suffix=".">
              <name and="text" delimiter-precedes-last="never" initialize-with=". "/>
              <label form="short" strip-periods="false" prefix=", "/>
            </names>
            <group prefix=" " suffix="." delimiter=" ">
              <text variable="event" font-style="italic"/>
              <choose>
                <if match="any" variable="URL">
                  <text term="online" text-case="capitalize-first" prefix="[" suffix="]"/>
                </if>
              </choose>
            </group>
            <text variable="collection-title" prefix=" " suffix="."/>
            <group suffix=".">
              <text macro="publisher" prefix=" "/>
              <group prefix=", ">
                <label variable="page" form="short" suffix=" "/>
                <text variable="page"/>
              </group>
            </group>
          </group>
        </else-if>		
        <else>
          <group suffix=".">
            <text macro="title" prefix=" "/>
            <text macro="editor" prefix=" "/>
          </group>
          <group prefix=" " suffix=".">
            <group delimiter=" ">
              <text variable="container-title" text-case="title" font-style="italic" suffix="."/>
              <choose>
                <if match="any" variable="URL"/>
              </choose>
            </group>
            <group delimiter=", " prefix=". ">
              <text variable="volume" font-weight="bold"/>
              <text variable="issue"/>
            </group>
            <group prefix=", ">
			  <label variable="page" form="short" suffix=" "/>
              <text variable="page"/>
            </group>
          </group>
        </else>
      </choose>
      <text prefix=" " macro="access" suffix="."/>
    </layout>
  </bibliography>
</style>
