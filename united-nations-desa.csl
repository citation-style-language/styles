<?xml version="1.0" encoding="utf-8"?>
<style xmlns="http://purl.org/net/xbiblio/csl" class="in-text" version="1.0" and="text" delimiter-precedes-et-al="always" et-al-min="4" initialize="false" initialize-with="." demote-non-dropping-particle="sort-only" default-locale="en-US">
  <!-- This style was edited with the Visual CSL Editor (https://editor.citationstyles.org/visualEditor/) -->
  <info>
    <title>United Nations - DESA</title>
    <title-short>UNDESA</title-short>
    <id>http://www.zotero.org/styles/united-nations-desa</id>
    <link href="http://www.zotero.org/styles/united-nations-desa" rel="self"/>
    <link href="https://www.un.org/dgacm/en/content/editorial-manual" rel="documentation"/>
    <author>
      <name>Marcelo T. LaFleur</name>
      <email>lafleurm@un.org</email>
    </author>
    <category citation-format="author-date"/>
    <category field="political_science"/>
    <summary>UN style for DESA</summary>
    <updated>2026-02-11T00:00:00+00:00</updated>
    <rights license="http://creativecommons.org/licenses/by-sa/3.0/">This work is licensed under a Creative Commons Attribution-ShareAlike 3.0 License</rights>
  </info>
  <locale>
    <terms>
      <term name="no date" form="short">n.d.</term>
      <term name="accessed">Accessed on</term>
      <term name="et-al">and others</term>
      <term name="page" form="short">
        <single>p.</single>
        <multiple>pp.</multiple>
      </term>
    </terms>
  </locale>
  <macro name="editor">
    <names variable="editor" delimiter=", ">
      <name and="text"/>
      <label form="short" prefix=", "/>
    </names>
  </macro>
  <macro name="author">
    <choose>
      <if type="bill book graphic legal_case legislation motion_picture report song" match="none">
        <choose>
          <if variable="author editor translator" match="any">
            <names variable="author">
              <name and="text" delimiter-precedes-last="never" name-as-sort-order="first"/>
              <label form="short" prefix=" (" suffix=")" strip-periods="true"/>
              <substitute>
                <names variable="editor"/>
                <names variable="translator"/>
              </substitute>
            </names>
          </if>
          <else>
            <choose>
              <if type="webpage software dataset document" match="any">
                <text variable="title"/>
              </if>
              <else-if variable="publisher" match="any">
                <choose>
                  <if type="article-journal article-magazine article-newspaper" match="any">
                    <text variable="publisher" font-style="italic"/>
                  </if>
                  <else>
                    <text variable="publisher"/>
                  </else>
                </choose>
              </else-if>
              <else-if variable="container-title">
                <choose>
                  <if type="article-journal article-magazine article-newspaper" match="any">
                    <text variable="container-title" font-style="italic"/>
                  </if>
                  <else>
                    <text variable="container-title"/>
                  </else>
                </choose>
              </else-if>
              <else>
                <text variable="title"/>
              </else>
            </choose>
          </else>
        </choose>
      </if>
      <else>
        <choose>
          <if variable="author editor translator" match="any">
            <names variable="author">
              <name name-as-sort-order="first" and="text" sort-separator=", " delimiter=", " delimiter-precedes-last="never"/>
              <label form="short" prefix=" (" suffix=")" strip-periods="true"/>
              <substitute>
                <names variable="editor"/>
                <names variable="translator"/>
              </substitute>
            </names>
          </if>
          <else-if type="report">
            <choose>
              <if variable="title">
                <text variable="title"/>
              </if>
              <else-if variable="publisher">
                <text variable="publisher"/>
              </else-if>
              <else-if variable="container-title">
                <text variable="container-title"/>
              </else-if>
              <else>
                <text variable="collection-title"/>
              </else>
            </choose>
          </else-if>
          <else-if variable="collection-title">
            <text variable="collection-title" font-style="italic"/>
          </else-if>
          <else-if variable="publisher" match="any">
            <text variable="publisher"/>
          </else-if>
          <else>
            <choose>
              <if variable="container-title">
                <choose>
                  <if type="article-journal article-magazine article-newspaper" match="any">
                    <text variable="container-title" font-style="italic"/>
                  </if>
                  <else>
                    <text variable="container-title"/>
                  </else>
                </choose>
              </if>
              <else>
                <text variable="title"/>
              </else>
            </choose>
          </else>
        </choose>
      </else>
    </choose>
  </macro>
  <macro name="author-short">
    <names variable="author">
      <name form="short" and="text" delimiter=", " initialize-with=". " delimiter-precedes-last="never"/>
      <substitute>
        <names variable="editor"/>
        <names variable="translator"/>
        <text variable="title-short"/>
        <text variable="title"/>
      </substitute>
    </names>
  </macro>
  <macro name="access">
    <choose>
      <if type="webpage software dataset document">
        <choose>
          <if variable="URL">
            <text term="available at" text-case="capitalize-first" prefix=" "/>
            <text variable="URL" font-style="normal" prefix=" "/>
            <choose>
              <if type="software dataset" match="any">
                <text macro="access-date"/>
              </if>
              <else-if variable="genre">
                <text macro="access-date"/>
              </else-if>
              <else-if variable="issued" match="none">
                <text macro="access-date"/>
              </else-if>
            </choose>
          </if>
        </choose>
      </if>
    </choose>
  </macro>
  <macro name="access-date">
    <choose>
      <if variable="accessed">
        <group prefix=". " delimiter=" ">
          <text term="accessed" suffix=" "/>
          <date variable="accessed">
            <date-part name="day" suffix=" "/>
            <date-part name="month" suffix=" "/>
            <date-part name="year"/>
          </date>
        </group>
      </if>
    </choose>
  </macro>
  <macro name="title">
    <choose>
      <if type="report">
        <text variable="title"/>
      </if>
      <else-if type="bill book graphic legal_case legislation motion_picture report song" match="any">
        <text variable="title" font-style="italic"/>
      </else-if>
      <else>
        <text variable="title"/>
      </else>
    </choose>
  </macro>
  <macro name="onusig">
    <choose>
      <if variable="archive_location">
        <text variable="archive_location" prefix=" Sales No. "/>
      </if>
    </choose>
  </macro>
  <macro name="publisher">
    <group delimiter=": ">
      <text variable="event"/>
      <text variable="publisher-place"/>
      <choose>
        <if variable="author editor translator" match="any">
          <text variable="publisher"/>
        </if>
      </choose>
      <choose>
        <if variable="publisher publisher-place" match="none">
          <text variable="container-title"/>
        </if>
      </choose>
    </group>
  </macro>
  <macro name="year-date">
    <choose>
      <if type="webpage">
        <choose>
          <if variable="issued">
            <date variable="issued">
              <date-part name="year"/>
            </date>
          </if>
          <else>
            <text term="no date" form="short"/>
          </else>
        </choose>
      </if>
      <else>
        <choose>
          <if variable="issued">
            <date variable="issued">
              <date-part name="year"/>
            </date>
          </if>
          <else>
            <text term="no date" form="short"/>
          </else>
        </choose>
      </else>
    </choose>
  </macro>
  <macro name="edition">
    <choose>
      <if is-numeric="edition">
        <group delimiter=" ">
          <number variable="edition" form="ordinal"/>
          <text term="edition" suffix=","/>
        </group>
      </if>
      <else>
        <text variable="edition"/>
      </else>
    </choose>
  </macro>
  <macro name="locators">
    <choose>
      <if type="article-journal article-magazine" match="any">
        <group delimiter=", ">
          <text variable="volume" prefix=" vol. "/>
          <text variable="issue" prefix=" No. "/>
        </group>
      </if>
      <else-if type="report">
        <choose>
          <if variable="number" is-numeric="number">
            <text variable="number" prefix=" No. "/>
          </if>
          <else>
            <text variable="number" prefix=" "/>
          </else>
        </choose>
      </else-if>
      <else-if type="bill book chapter graphic legal_case legislation motion_picture paper-conference song" match="any">
        <choose>
          <if variable="collection-title" match="none">
            <group prefix=" (" suffix=")" delimiter=", ">
              <text macro="edition"/>
              <group>
                <text term="volume" form="short" plural="true" text-case="capitalize-first" suffix=" "/>
                <number variable="number-of-volumes" form="numeric" prefix="1-"/>
              </group>
              <group>
                <text term="volume" form="short" text-case="capitalize-first" suffix=" "/>
                <number variable="volume" form="numeric"/>
              </group>
              <group>
                <label variable="page" form="short" suffix=" "/>
                <text variable="page"/>
              </group>
            </group>
          </if>
          <else>
            <group delimiter=", ">
              <text variable="volume" prefix=" vol. "/>
              <text variable="collection-number" prefix=" No. "/>
            </group>
          </else>
        </choose>
      </else-if>
    </choose>
  </macro>
  <macro name="article-date">
    <choose>
      <if type="article-newspaper">
        <date variable="issued">
          <date-part name="day" suffix=" "/>
          <date-part name="month"/>
        </date>
      </if>
      <else-if type="article-journal article-magazine" match="any">
        <choose>
          <if variable="issue">
            <group prefix="(" suffix=")">
              <date variable="issued">
                <date-part name="month"/>
              </date>
            </group>
          </if>
          <else>
            <date variable="issued">
              <date-part name="month"/>
            </date>
          </else>
        </choose>
      </else-if>
    </choose>
  </macro>
  <macro name="report-date">
    <date variable="issued">
      <date-part name="day" suffix=" "/>
      <date-part name="month"/>
    </date>
  </macro>
  <macro name="citation-locator">
    <group>
      <label variable="locator" form="short"/>
      <text variable="locator" prefix=" "/>
    </group>
  </macro>
  <citation et-al-min="4" et-al-use-first="1" disambiguate-add-year-suffix="true" disambiguate-add-names="true" disambiguate-add-givenname="true" collapse="year" delimiter-precedes-et-al="never">
    <sort>
      <key macro="author"/>
      <key variable="issued"/>
      <key variable="title"/>
    </sort>
    <layout prefix="(" suffix=")" delimiter="; ">
      <group delimiter=", ">
        <choose>
          <if variable="author editor translator" match="any">
            <group delimiter=", ">
              <text macro="author-short"/>
              <text macro="year-date"/>
            </group>
            <text macro="citation-locator"/>
          </if>
          <else-if variable="title-short title" match="any">
            <group delimiter=", ">
              <choose>
                <if variable="title-short">
                  <text variable="title-short"/>
                </if>
                <else>
                  <text variable="title"/>
                </else>
              </choose>
              <text macro="year-date"/>
            </group>
            <text macro="citation-locator"/>
          </else-if>
          <else-if variable="publisher" match="any">
            <group delimiter=", ">
              <text variable="publisher" font-style="italic"/>
              <text macro="year-date"/>
            </group>
            <text macro="citation-locator"/>
          </else-if>
          <else>
            <group delimiter=", ">
              <text variable="container-title" font-style="italic"/>
              <text macro="year-date"/>
            </group>
            <text macro="citation-locator"/>
          </else>
        </choose>
      </group>
    </layout>
  </citation>
  <bibliography hanging-indent="true" et-al-min="4" et-al-use-first="1" subsequent-author-substitute="__________" entry-spacing="1">
    <sort>
      <key macro="author"/>
      <key variable="issued"/>
      <key variable="title"/>
    </sort>
    <layout suffix=".">
      <text macro="author" suffix=" "/>
      <text macro="year-date" prefix="(" suffix=")."/>
      <choose>
        <if type="report">
          <choose>
            <if variable="author editor translator" match="any">
              <text macro="title" prefix=" "/>
            </if>
          </choose>
          <group delimiter=", " prefix=". ">
            <text variable="collection-title" font-style="italic"/>
            <choose>
              <if variable="number">
                <text macro="locators"/>
              </if>
            </choose>
          </group>
          <text macro="onusig"/>
          <group prefix=", " delimiter=", ">
            <text macro="publisher"/>
            <group>
              <label variable="page" form="short" plural="never" suffix=" "/>
              <text variable="page"/>
            </group>
          </group>
          <text macro="report-date" prefix=", "/>
        </if>
        <else-if type="bill book graphic legal_case legislation motion_picture report song" match="any">
          <choose>
            <if variable="collection-title" match="none">
              <group>
                <text macro="title" prefix=" "/>
              </group>
              <group delimiter=". " prefix=". ">
                <text macro="edition"/>
                <text macro="editor"/>
                <text macro="publisher"/>
                <date variable="issued">
                  <date-part name="month"/>
                </date>
              </group>
            </if>
            <else>
              <text macro="title" prefix=" " suffix=". "/>
              <text variable="collection-title" suffix=", "/>
              <text macro="locators"/>
              <text macro="onusig"/>
              <text macro="publisher" prefix=", "/>
              <date variable="issued" prefix=", ">
                <date-part name="month"/>
                <date-part name="day" prefix=" "/>
              </date>
            </else>
          </choose>
        </else-if>
        <else-if type="chapter paper-conference" match="any">
          <group>
            <text macro="title" prefix=" "/>
          </group>
          <group delimiter=", " prefix=". ">
            <text variable="container-title" font-style="italic" prefix="In "/>
            <text variable="collection-title"/>
            <text macro="editor"/>
            <group delimiter=": ">
              <text variable="publisher-place"/>
              <text variable="publisher"/>
            </group>
            <group>
              <label variable="page" form="short" plural="always" suffix=" "/>
              <text variable="page"/>
            </group>
          </group>
        </else-if>
        <else-if type="article-journal article-magazine article-newspaper" match="any">
          <group>
            <text macro="title" quotes="false" prefix=" "/>
            <choose>
              <if variable="container-title" match="none">
                <text macro="onusig"/>
              </if>
            </choose>
          </group>
          <group delimiter=", " prefix=". ">
            <choose>
              <if variable="author editor translator" match="any">
                <text variable="container-title" font-style="italic"/>
              </if>
            </choose>
            <text variable="collection-title"/>
            <group delimiter=" ">
              <text macro="locators"/>
              <text macro="article-date"/>
            </group>
            <group>
              <label variable="page" form="short" suffix=" "/>
              <text variable="page"/>
            </group>
          </group>
          <choose>
            <if variable="container-title">
              <text macro="onusig"/>
            </if>
          </choose>
        </else-if>
        <else-if type="speech">
          <text macro="title" prefix=" "/>
          <choose>
            <if variable="genre">
              <text variable="event" prefix=", document prepared for the project "/>
            </if>
            <else>
              <text variable="event" prefix=", document presented in "/>
            </else>
          </choose>
          <group prefix=", " delimiter=", ">
            <text variable="publisher-place"/>
            <date variable="issued">
              <date-part name="day" suffix=" "/>
              <date-part name="month"/>
            </date>
          </group>
        </else-if>
        <else-if type="document">
          <group delimiter=", " prefix=" ">
            <choose>
              <if variable="author editor translator" match="any">
                <text macro="title"/>
              </if>
            </choose>
            <text variable="publisher-place"/>
            <date variable="issued">
              <date-part name="day" suffix=" "/>
              <date-part name="month"/>
            </date>
          </group>
        </else-if>
        <else>
          <group delimiter=", ">
            <choose>
              <if variable="author editor translator" match="any">
                <text macro="title" prefix=" "/>
              </if>
            </choose>
            <text macro="editor"/>
            <choose>
              <if type="webpage software dataset document" match="none">
                <text variable="container-title" font-style="italic"/>
              </if>
            </choose>
          </group>
        </else>
      </choose>
      <text macro="access" prefix="."/>
      <text macro="onusig" prefix=". "/>
    </layout>
  </bibliography>
</style>
